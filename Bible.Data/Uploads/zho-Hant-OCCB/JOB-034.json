[["c","34"],["v","1"],["pn","以利戶"],["","又說："],["v","2"],["","「各位智者，請聽我言；"],["q1","明達之士，要側耳聽我的話。"],["v","3"],["","因為耳朵辨別話語，"],["q1","正如舌頭品嘗食物。"],["v","4"],["","我們來鑒別何為正，"],["q1","一起來認識何為善。"],["v","5"],["pn","約伯"],["","曾說，『我是清白的，"],["q1","上帝卻奪去我的公道。"],["v","6"],["","我雖然有理，卻被認為是撒謊者；"],["q1","我雖然無過，卻受到致命的創傷。』"],["v","7"],["","有誰像"],["pn","約伯"],["","？"],["q1","他肆意嘲諷，"],["v","8"],["","與惡者為伍，"],["q1","同壞人作伴。"],["v","9"],["","因為他說，『人取悅上帝毫無益處。』"],["v","10"],["","「所以明智的人啊，請聽我言，"],["q1","上帝絕不會作惡，"],["q1","全能者絕無不義。"],["v","11"],["","祂按人所行的對待人，"],["q1","照人所做的報應人。"],["v","12"],["","上帝絕不會作惡，"],["q1","全能者不會顛倒是非。"],["v","13"],["","誰曾派祂治理大地，"],["q1","讓祂掌管整個世界呢？"],["v","14"],["","上帝若決定收回自己的靈和氣，"],["v","15"],["","所有生命將一同滅亡，"],["q1","世人也將歸回塵土。"],["v","16"],["","「你若明理，請聽我言，"],["q1","側耳聽我說。"],["v","17"],["","憎惡正義的豈可掌權？"],["q1","你要譴責公義的大能者嗎？"],["v","18"],["","祂可以稱君王為廢物，"],["q1","稱權貴為惡徒。"],["v","19"],["","祂不偏袒王侯，"],["q1","也不輕貧重富，"],["q1","因為他們都是祂親手造的。"],["v","20"],["","他們夜半猝然死去，"],["q1","百姓震顫，繼而消逝，"],["q1","權貴也被剷除，非藉人手。"],["v","21"],["","祂注目世人所行之道，"],["q1","察看他們走的每一步。"],["v","22"],["","沒有黑暗和陰影可供作惡者藏身。"],["v","23"],["","祂不必再三察驗，"],["q1","把人召到面前審判。"],["v","24"],["","祂擊垮權貴無需審查，"],["q1","另立他人取而代之。"],["v","25"],["","祂知道他們的行為，"],["q1","祂使他們在夜間傾覆、滅亡。"],["v","26"],["","祂當眾擊打他們，"],["q1","正如擊打惡人。"],["v","27"],["","因為他們離棄祂，"],["q1","無視祂的正道，"],["v","28"],["","以致窮人的呼求傳到祂那裡，"],["q1","祂也聽見了困苦者的呼求。"],["v","29"],["","但祂若保持緘默，誰能定祂有罪？"],["q1","祂若掩起臉來，誰能看得見祂？"],["q1","個人和國家都靠祂垂顧，"],["v","30"],["","以免不敬虔者做王，"],["q1","禍國殃民。"],["v","31"],["","「有誰對上帝說，"],["q1","『我受了管教，不會再犯罪；"],["v","32"],["","我不明白的事，求你指教我；"],["q1","我若行了惡事，必不再行』？"],["v","33"],["","難道因為你拒絕接受，"],["q1","上帝就要迎合你的要求嗎？"],["q1","要做抉擇的是你，而非我，"],["q1","請說說你的高見。"],["v","34"],["","明達的人和聽我發言的智者都會說，"],["v","35"],["","『"],["pn","約伯"],["","所言毫無知識，"],["q1","他的話沒有智慧。』"],["v","36"],["","願"],["pn","約伯"],["","被試煉到底，"],["q1","因為他的回答如惡人之言。"],["v","37"],["","他的叛逆使他罪上加罪，"],["q1","他在我們中間拍手譏笑，"],["q1","用許多話褻瀆上帝。」"]]