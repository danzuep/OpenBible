[["c","35"],["cl","第35篇"],["s4","求上帝伸冤"],["d","大衛的詩。"],["v","1"],["","耶和華啊，"],["q1","求你與我的敵人為敵，"],["q1","攻擊那些攻擊我的人。"],["v","2"],["","求你拿起大小盾牌來幫助我，"],["v","3"],["","舉起矛槍攻擊追趕我的人。"],["q1","求你對我說："],["q1","「我是你的拯救。」"],["v","4"],["","願害我命的人蒙羞受辱，"],["q1","謀害我的人落荒而逃！"],["v","5"],["","願耶和華的天使驅散他們，"],["q1","如風吹散糠秕！"],["v","6"],["","願他們的道路漆黑濕滑，"],["q1","有耶和華的天使在後追趕！"],["v","7"],["","因為他們無故設網羅，"],["q1","挖陷阱要害我性命。"],["v","8"],["","願他們突遭禍患，"],["q1","願他們作繭自縛，"],["q1","願他們自食惡果。"],["v","9"],["","我要因耶和華而歡欣，"],["q1","因祂的拯救而快樂。"],["v","10"],["","我從心底發出讚歎："],["q1","「耶和華啊，誰能像你？"],["q1","你拯救弱者免受強者欺壓，"],["q1","拯救窮困的人免遭掠奪。」"],["v","11"],["","惡人誣告我，"],["q1","盤問我毫無所知的事情。"],["v","12"],["","他們對我以惡報善，"],["q1","令我傷心欲絕。"],["v","13"],["","他們生病時，"],["q1","我披上麻衣，"],["q1","謙卑地為他們禁食禱告，"],["q1","但我的禱告未蒙垂聽。"],["v","14"],["","我為他們哀傷，"],["q1","視他們為朋友、弟兄；"],["q1","我低頭為他們哭泣，"],["q1","如同哀悼自己的母親。"],["v","15"],["","我遭遇患難時，"],["q1","他們卻聚在一起幸災樂禍，"],["q1","合夥攻擊我。"],["q1","素不相識的人也群起攻擊我，"],["q1","不住地譭謗我。"],["v","16"],["","他們肆無忌憚地嘲弄我，"],["q1","咬牙切齒地憎惡我。"],["v","17"],["","耶和華啊，"],["q1","你袖手旁觀要到何時？"],["q1","求你救我的性命免遭殘害，"],["q1","救我脫離這些獅子。"],["v","18"],["","我要在大會中稱謝你，"],["q1","在眾人面前讚美你。"],["v","19"],["","求你不要讓無故攻擊我的人幸災樂禍，"],["q1","不要讓無故恨我的人向我輕蔑地擠眼。"],["v","20"],["","他們言語暴戾，"],["q1","謀害安分守己的人。"],["v","21"],["","他們輕蔑地高喊：「哈哈！哈哈！"],["q1","我們親眼看見了。」"],["v","22"],["","耶和華啊，這一切你都看見了，"],["q1","求你不要再緘默。"],["q1","主啊，求你不要遠離我。"],["v","23"],["","我的上帝，我的主啊，"],["q1","求你起來為我辯護，為我伸冤。"],["v","24"],["","我的上帝耶和華啊，"],["q1","求你按你的公義判我無罪，"],["q1","別讓他們幸災樂禍。"],["v","25"],["","別讓他們說："],["q1","「哈哈，我們如願以償了！」"],["q1","別讓他們說："],["q1","「我們除掉他了！」"],["v","26"],["","願幸災樂禍的人蒙羞受辱，"],["q1","願自高自大的人無地自容！"],["v","27"],["","願盼望我冤屈得雪的人揚聲歡呼！"],["q1","願他們常說：「耶和華當受尊崇！"],["q1","祂樂意賜福給自己的僕人。」"],["v","28"],["","我要訴說你的公義，"],["q1","終日讚美你。"]]