[["c","28"],["v","1"],["","惡人未被追趕也逃竄，"],["q2","義人坦然無懼如雄獅。"],["v","2"],["","國中有罪，君王常換；"],["q2","國有哲士，長治久安。"],["v","3"],["","窮人"],["","欺壓貧民，"],["q2","如暴雨沖毀糧食。"],["v","4"],["","背棄律法的稱讚惡人，"],["q2","遵守律法的抗拒惡人。"],["v","5"],["","邪惡之人不明白公義，"],["q2","尋求耶和華的全然明白。"],["v","6"],["","行為正直的窮人，"],["q2","勝過行事邪僻的富人。"],["v","7"],["","遵守律法的是智慧之子，"],["q2","與貪食者為伍的令父蒙羞。"],["v","8"],["","人放高利貸牟利，"],["q2","是為濟貧者積財。"],["v","9"],["","人若不聽從律法，"],["q2","他的禱告也可憎。"],["v","10"],["","引誘正直人走邪道，"],["q2","必掉進自己設的陷阱；"],["q2","但純全無過的人必承受福分。"],["v","11"],["","富人自以為有智慧，"],["q2","卻被明智的窮人看透。"],["v","12"],["","義人得勝，眾民歡騰；"],["q2","惡人當道，人人躲藏。"],["v","13"],["","自掩其罪，必不亨通；"],["q2","痛改前非，必蒙憐憫。"],["v","14"],["","常敬畏主的必蒙福，"],["q2","心裡剛硬的必遭禍。"],["v","15"],["","暴虐的君王轄制窮人，"],["q2","如咆哮的獅、覓食的熊。"],["v","16"],["","昏庸的君王殘暴不仁，"],["q2","恨不義之財的享長壽。"],["v","17"],["","背負血債者必終生逃亡，"],["q2","誰也不要幫他。"],["v","18"],["","純全無過的必蒙拯救，"],["q2","行為邪僻的轉眼覆滅。"],["v","19"],["","勤奮耕耘，豐衣足食；"],["q2","追求虛榮，窮困潦倒。"],["v","20"],["","忠信的人必大蒙祝福，"],["q2","急於發財的難免受罰。"],["v","21"],["","徇私偏袒實為不善，"],["q2","人卻為一點餅而枉法。"],["v","22"],["","貪婪的人急於發財，"],["q2","卻不知貧窮即將臨到。"],["v","23"],["","責備人的至終比諂媚者更受愛戴。"],["v","24"],["","竊取父母之財而不知罪者與匪類無異。"],["v","25"],["","貪得無厭的人挑起紛爭，"],["q2","信靠耶和華的富足昌盛。"],["v","26"],["","愚人心中自以為是，"],["q2","憑智慧行事的平安穩妥。"],["v","27"],["","賙濟窮人的一無所缺，"],["q2","視而不見的多受咒詛。"],["v","28"],["","惡人當道，人人躲藏；"],["q2","惡人滅亡，義人增多。"]]