[["c","22"],["s1","大衛的頌歌"],["p",""],["v","1"],["","耶和華從"],["pn","掃羅"],["","及所有仇敵手中拯救"],["pn","大衛"],["","那天，他向耶和華吟唱此詩："],["v","2"],["","「耶和華是我的磐石，"],["q1","我的堡壘，我的拯救者；"],["v","3"],["","我的上帝是庇護我的磐石，"],["q1","是我的盾牌，是拯救我的力量，"],["q1","是我的堅壘，我的避難所，"],["q1","我的救主。"],["q1","你救我脫離殘暴之徒。"],["v","4"],["","我求告當受頌讚的耶和華，"],["q1","祂便救我脫離仇敵。"],["v","5"],["","「死亡的波濤環繞我，"],["q1","毀滅的狂流淹沒我。"],["v","6"],["","陰間的繩索捆綁我，"],["q1","死亡的網羅籠罩我。"],["v","7"],["","「我在苦難中呼求耶和華，"],["q1","向我的上帝求助，"],["q1","祂從殿中垂聽我的呼求，"],["q1","我的聲音達到祂耳中。"],["v","8"],["","「祂一發怒，大地震動顫抖，"],["q1","穹蒼的根基搖晃。"],["v","9"],["","祂的鼻孔冒煙，"],["q1","口噴烈焰和火炭。"],["v","10"],["","祂使穹蒼低垂，親自降臨，"],["q1","腳下踩著密雲。"],["v","11"],["","祂乘著基路伯天使飛翔，"],["q1","在風的翅膀上顯現。"],["v","12"],["","祂藏身於黑暗中，"],["q1","四圍以密雲作幔幕。"],["v","13"],["","祂面前的榮光中發出道道閃電。"],["v","14"],["","耶和華在天上打雷，"],["q1","至高者發出聲音。"],["v","15"],["","祂射出利箭驅散仇敵，"],["q1","發出閃電擊潰他們。"],["v","16"],["","耶和華斥責一聲，"],["q1","祂的鼻孔一吹氣，"],["q1","海底就顯現，"],["q1","大地也露出根基。"],["v","17"],["","「祂從高天伸手抓住我，"],["q1","從大水中把我拉上來。"],["v","18"],["","祂救我脫離強敵，"],["q1","脫離我無法戰勝的仇敵。"],["v","19"],["","他們在我危難之時攻擊我，"],["q1","但耶和華扶持我。"],["v","20"],["","祂領我到寬闊之地；"],["q1","祂搭救我，因為祂喜悅我。"],["v","21"],["","「耶和華因我公義而善待我，"],["q1","因我清白而賞賜我。"],["v","22"],["","因為我遵行祂的道，"],["q1","沒有作惡背棄我的上帝。"],["v","23"],["","「我遵守祂的一切法令，"],["q1","沒有把祂的律例棄置一旁。"],["v","24"],["","我在祂面前純全無過，"],["q1","沒有沾染罪惡。"],["v","25"],["","耶和華按我的公義，"],["q1","照我在祂面前的清白獎賞我。"],["v","26"],["","「仁慈的人，你以仁慈待他；"],["q1","純全的人，你以純全待他。"],["v","27"],["","純潔的人，你以純潔待他；"],["q1","乖謬的人，你以計謀待他。"],["v","28"],["","你拯救謙卑的人，"],["q1","鑒察、貶抑高傲的人。"],["v","29"],["","耶和華啊！你是我的明燈，"],["q1","你使我的黑暗變為光明。"],["v","30"],["","我靠著你迎戰敵軍，"],["q1","靠著我的上帝躍過牆垣。"],["v","31"],["","「上帝的道完美，"],["q1","耶和華的話純全，"],["q1","祂是一切投靠祂之人的盾牌。"],["v","32"],["","除了耶和華，誰是上帝呢？"],["q1","除了我們的上帝，誰是磐石呢？"],["v","33"],["","上帝是我的堅固堡壘，"],["q1","祂使我行為純全。"],["v","34"],["","祂使我的腳如母鹿的蹄，"],["q1","穩踏在高處。"],["v","35"],["","祂訓練我的手如何爭戰，"],["q1","使我的臂膀能拉開銅弓。"],["v","36"],["","你是拯救我的盾牌，"],["q1","你的垂顧使我強大。"],["v","37"],["","你使我腳下的道路寬闊，"],["q1","不致滑倒。"],["v","38"],["","我追趕仇敵，擊潰他們，"],["q1","不消滅他們決不回頭。"],["v","39"],["","我打垮他們，"],["q1","使他們倒在我的腳下，"],["q1","再也站不起來。"],["v","40"],["","你賜我征戰的能力，"],["q1","使我的仇敵降服在我腳下。"],["v","41"],["","你使我的仇敵敗逃，"],["q1","我殲滅了恨我的人。"],["v","42"],["","他們呼救，卻無人拯救。"],["q1","他們呼求耶和華，祂也不應允。"],["v","43"],["","我把他們打得粉碎，如同地上的灰塵，"],["q1","壓碎並踐踏他們，如同街上的泥土。"],["v","44"],["","你救我脫離我百姓的攻擊，"],["q1","立我做列國的元首，"],["q1","素不相識的民族也服侍我。"],["v","45"],["","外族人望風而降，對我俯首稱臣。"],["v","46"],["","他們聞風喪膽，"],["q1","戰戰兢兢地走出他們的城池。"],["v","47"],["","「耶和華永遠活著，"],["q1","我的磐石當受頌讚，"],["q1","拯救我的磐石，我的上帝當受尊崇。"],["v","48"],["","祂是為我伸冤的上帝，"],["q1","祂使列邦臣服於我。"],["v","49"],["","祂救我脫離仇敵，"],["q1","使我勝過強敵，"],["q1","救我脫離殘暴之徒。"],["v","50"],["","因此，耶和華啊，"],["q1","我要在列邦中讚美你，"],["q1","歌頌你的名。"],["v","51"],["","你使你立的王大獲全勝，"],["q1","向你膏立的"],["pn","大衛"],["","及其後代廣施慈愛，"],["q1","直到永遠。」"]]