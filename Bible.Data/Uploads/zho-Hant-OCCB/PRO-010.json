[["c","10"],["s1","所羅門的箴言"],["p",""],["v","1"],["","以下是"],["pn","所羅門"],["","的箴言："],["q2","智慧兒使父親快樂，"],["q2","愚昧兒叫母親憂傷。"],["v","2"],["","不義之財毫無益處，"],["q2","公義救人脫離死亡。"],["v","3"],["","耶和華不讓義人挨餓，"],["q2","祂使惡人的奢望成空。"],["v","4"],["","遊手好閒招致貧窮，"],["q2","勤奮努力帶來富足。"],["v","5"],["","精明兒夏季時貯藏，"],["q2","不肖子收成時酣睡。"],["v","6"],["","祝福臨到義人的頭，"],["q2","殘暴充滿惡人的口。"],["v","7"],["","義人流芳於世，"],["q2","惡人名聲敗壞。"],["v","8"],["","心存智慧的接受誡命；"],["q2","說話愚昧的自招滅亡。"],["v","9"],["","行正道者活得安穩，"],["q2","走歪路者終必敗露。"],["v","10"],["","擠眉弄眼，帶來憂傷；"],["q2","胡言亂語，導致滅亡。"],["v","11"],["","義人的口是生命之泉，"],["q2","惡人的口卻充滿殘暴。"],["v","12"],["","恨能挑起紛爭，"],["q2","愛能遮掩一切過犯。"],["v","13"],["","明哲口中有智慧，"],["q2","無知者背上受鞭打。"],["v","14"],["","智者儲藏知識，"],["q2","愚人口惹禍端。"],["v","15"],["","錢財是富人的堅城，"],["q2","貧乏帶給窮人毀滅。"],["v","16"],["","義人的報酬是生命，"],["q2","惡人的果子是懲罰。"],["v","17"],["","聽從教誨的，走生命之路；"],["q2","拒絕責備的，必步入歧途。"],["v","18"],["","暗藏仇恨的滿口虛謊，"],["q2","散佈流言的愚不可及。"],["v","19"],["","言多必失，智者慎言。"],["v","20"],["","義人之舌似純銀，"],["q2","惡人之心無價值。"],["v","21"],["","義人的口滋養眾人，"],["q2","愚人因無知而死亡。"],["v","22"],["","耶和華的祝福使人富足，"],["q2","祝福中不加任何憂愁"],["","。"],["v","23"],["","愚人以惡為樂，"],["q2","哲士喜愛智慧。"],["v","24"],["","惡人所怕的必臨到他，"],["q2","義人的心願必得實現。"],["v","25"],["","暴風掃過，"],["q2","惡人消逝無蹤，"],["q2","義人永不動搖。"],["v","26"],["","懶漢讓差他的人難受，"],["q2","如醋倒牙，如煙薰目。"],["v","27"],["","敬畏耶和華的享長壽，"],["q2","惡人的壽數必被縮短。"],["v","28"],["","義人的憧憬帶來歡樂，"],["q2","惡人的希望終必破滅。"],["v","29"],["","耶和華的道保護正直人，"],["q2","毀滅作惡之人。"],["v","30"],["","義人永不動搖，"],["q2","惡人無處容身。"],["v","31"],["","義人的口發出智慧，"],["q2","詭詐的舌必被割掉。"],["v","32"],["","義人說話得體合宜，"],["q2","惡人口出乖謬之言。"]]