[["c","15"],["v","1"],["","溫和的回答平息怒氣，"],["q2","粗暴的言詞激起憤怒。"],["v","2"],["","智者的舌頭傳揚知識，"],["q2","愚人的嘴巴吐露愚昧。"],["v","3"],["","耶和華的眼目無所不在，"],["q2","無論善人惡人，祂都鑒察。"],["v","4"],["","溫和的言詞是生命樹，"],["q2","乖謬的話語傷透人心。"],["v","5"],["","愚人蔑視父親的管教，"],["q2","接受責備的才算明智。"],["v","6"],["","義人家中財富充足，"],["q2","惡人得利惹來禍患。"],["v","7"],["","智者的嘴傳揚知識，"],["q2","愚人的心並非如此。"],["v","8"],["","耶和華憎恨惡人的祭物，"],["q2","悅納正直人的祈禱。"],["v","9"],["","耶和華憎恨惡人的行徑，"],["q2","喜愛追求公義的人。"],["v","10"],["","背離正道，必遭嚴懲；"],["q2","厭惡責備，必致死亡。"],["v","11"],["","陰間和死地在耶和華面前尚且無法隱藏，"],["q2","何況世人的心思呢！"],["v","12"],["","嘲諷者不愛聽責備，"],["q2","也不願請教智者。"],["v","13"],["","心中喜樂，容光煥發；"],["q2","心裡悲傷，精神頹喪。"],["v","14"],["","哲士的心追求知識，"],["q2","愚人的口吞吃愚昧。"],["v","15"],["","困苦人天天受煎熬，"],["q2","樂觀者常常有喜樂。"],["v","16"],["","財物雖少但敬畏耶和華，"],["q2","勝過家財萬貫卻充滿煩惱。"],["v","17"],["","粗茶淡飯但彼此相愛，"],["q2","勝過美酒佳餚卻互相憎恨。"],["v","18"],["","脾氣暴躁，惹起爭端；"],["q2","忍耐克制，平息糾紛。"],["v","19"],["","懶惰人的路佈滿荊棘，"],["q2","正直人的道平坦寬闊。"],["v","20"],["","智慧之子使父親歡喜，"],["q2","愚昧之人卻藐視母親。"],["v","21"],["","無知者以愚昧為樂，"],["q2","明哲之士遵循正道。"],["v","22"],["","缺乏商討，計劃失敗；"],["q2","集思廣益，事無不成。"],["v","23"],["","應對得體，心中愉快；"],["q2","言語合宜，何等美好！"],["v","24"],["","智者循生命之路上升，"],["q2","以免墜入陰間。"],["v","25"],["","耶和華拆毀傲慢人的房屋，"],["q2","祂使寡婦的地界完整無損。"],["v","26"],["","耶和華憎恨惡念，"],["q2","恩言乃是純潔的。"],["v","27"],["","貪不義財，自害己家；"],["q2","厭惡賄賂，安然存活。"],["v","28"],["","義人三思而後答，"],["q2","惡人張口吐惡言。"],["v","29"],["","耶和華遠離惡人，"],["q2","卻聽義人的禱告。"],["v","30"],["","眼神發光令人心喜，"],["q2","喜訊出來滋潤骨頭。"],["v","31"],["","傾聽生命的訓誡，"],["q2","使人與智者同列。"],["v","32"],["","不受管教就是輕看自己，"],["q2","聽從責備才能得到智慧。"],["v","33"],["","敬畏耶和華乃是智訓，"],["q2","學會謙卑才能得尊榮。"]]