[["c","109"],["cl","第109篇"],["s4","患難中的苦訴"],["d","大衛的詩，交給樂長。"],["v","1"],["","我所讚美的上帝啊，"],["q1","求你不要沉默不語。"],["v","2"],["","因為邪惡和詭詐的人開口攻擊我，"],["q1","用撒謊的舌頭譭謗我。"],["v","3"],["","他們對我惡語相向，"],["q1","無緣無故地攻擊我。"],["v","4"],["","我愛他們，他們卻控告我，"],["q1","但我專心禱告。"],["v","5"],["","他們對我以惡報善，"],["q1","以恨報愛。"],["v","6"],["","求你差惡人攻擊我的仇敵，"],["q1","派對頭站在他右邊控告他。"],["v","7"],["","當他受審時，"],["q1","願他被判為有罪，"],["q1","他的禱告也算為罪過。"],["v","8"],["","願他的年日短少，"],["q1","願別人取代他的職位。"],["v","9"],["","願他的孩子失去父親，"],["q1","妻子成為寡婦。"],["v","10"],["","願他的孩子流浪行乞，"],["q1","被趕出自己破敗的家。"],["v","11"],["","願債主奪取他所有的財產，"],["q1","陌生人搶走他的勞動成果。"],["v","12"],["","願無人向他施恩，"],["q1","無人同情他的孤兒。"],["v","13"],["","願他斷子絕孫，"],["q1","他的姓氏傳不到下一代。"],["v","14"],["","願耶和華記住他祖輩的罪惡，"],["q1","不除去他母親的罪過。"],["v","15"],["","願耶和華永不忘記他的罪惡，"],["q1","把他的名號從世上剷除。"],["v","16"],["","因為他毫無仁慈，"],["q1","迫害困苦、貧窮和傷心的人，"],["q1","置他們於死地。"],["v","17"],["","他喜歡咒詛人，"],["q1","願咒詛臨到他；"],["q1","他不喜歡祝福人，"],["q1","願祝福遠離他。"],["v","18"],["","他咒詛成性，"],["q1","願咒詛如水侵入他的身體，"],["q1","如油浸透他的骨頭。"],["v","19"],["","願咒詛不離其身，"],["q1","如同身上的衣服和腰間的帶子。"],["v","20"],["","願耶和華這樣報應那些控告我，"],["q1","以惡言攻擊我的人。"],["v","21"],["","主耶和華啊，"],["q1","求你因自己的名恩待我，"],["q1","因你的美善和慈愛拯救我。"],["v","22"],["","因為我貧窮困苦，"],["q1","內心飽受創傷。"],["v","23"],["","我像黃昏的日影一樣消逝，"],["q1","如蝗蟲一般被抖落。"],["v","24"],["","禁食使我雙腿發軟，"],["q1","瘦骨嶙峋。"],["v","25"],["","仇敵都嘲笑我，"],["q1","他們看見我就連連搖頭。"],["v","26"],["","我的上帝耶和華啊，"],["q1","求你幫助我，施慈愛拯救我，"],["v","27"],["","讓他們知道這是你的作為，"],["q1","你耶和華行了此事。"],["v","28"],["","任憑他們咒詛吧，"],["q1","你必賜福給我。"],["q1","攻擊我的人必蒙羞，"],["q1","但你的僕人必歡喜。"],["v","29"],["","願控告我的人滿面羞辱，"],["q1","願他們渾身被恥辱包裹。"],["v","30"],["","我要竭力頌揚耶和華，"],["q1","在人群中讚美祂。"],["v","31"],["","因為祂保護貧窮的人，"],["q1","救他們脫離定他們死罪的人。"]]