[["c","26"],["s1","約伯的回答"],["v","1"],["pn","約伯"],["","回答說："],["v","2"],["","「你真是幫了軟弱者的大忙！"],["q1","救了臂膀無力的人！"],["v","3"],["","無智慧的人真多虧你的指教！"],["q1","承蒙你的真知灼見！"],["v","4"],["","誰幫你說出這些話？"],["q1","誰的靈在藉著你發言？"],["v","5"],["","「陰魂和水族在水底顫抖，"],["v","6"],["","陰間裸露在祂面前，"],["q1","滅亡之地毫無遮掩。"],["v","7"],["","祂將北極鋪在空中，"],["q1","將地懸在虛無中；"],["v","8"],["","祂將水捲在密雲中，"],["q1","雲負重卻不裂開。"],["v","9"],["","祂遮蓋自己的寶座"],["","，"],["q1","把雲彩鋪在上面。"],["v","10"],["","祂在海面上畫出地平線，"],["q1","作為光明與黑暗的交界。"],["v","11"],["","祂的斥責使天柱震動驚駭，"],["v","12"],["","祂的能力使大海平靜，"],["q1","祂運用智慧擊碎海怪。"],["v","13"],["","祂吹的氣使天空晴朗，"],["q1","祂揮手刺穿逃跑的蛇。"],["v","14"],["","看啊，這不過是祂作為的一斑，"],["q1","是我們聽到的點滴微音！"],["q1","誰能領悟祂的雷霆萬鈞？」"]]