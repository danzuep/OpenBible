[["c","19"],["v","1"],["","行為正直的窮人，"],["q2","勝過言語詭詐的愚人。"],["v","2"],["","熱誠卻無知不足取，"],["q2","行動急躁難免有錯。"],["v","3"],["","人因愚昧而自毀前程，"],["q2","他的心卻抱怨耶和華。"],["v","4"],["","財富招來許多朋友，"],["q2","窮人卻遭朋友拋棄。"],["v","5"],["","作偽證者難免受罰，"],["q2","撒謊的人罪責難逃。"],["v","6"],["","大家都討好慷慨的人，"],["q2","人人都結交好施贈的。"],["v","7"],["","窮人被親人厭棄，"],["q2","朋友都遠遠躲避。"],["q2","他苦苦哀求，也無人理會。"],["v","8"],["","得到智慧的珍惜生命，"],["q2","持守悟性的找到福樂。"],["v","9"],["","作偽證者難免受罰，"],["q2","撒謊的人自取滅亡。"],["v","10"],["","愚人奢華宴樂不相宜，"],["q2","奴隸管轄王子更離譜。"],["v","11"],["","智者不輕易發怒，"],["q2","饒恕過犯是他的榮耀。"],["v","12"],["","君王的震怒像雄獅怒吼，"],["q2","君王的恩澤如草上甘露。"],["v","13"],["","愚昧之子是父親的災殃，"],["q2","爭鬧之妻如雨滴漏不止。"],["v","14"],["","房屋錢財是祖先的遺產，"],["q2","賢慧之妻乃耶和華所賜。"],["v","15"],["","懶惰使人沉睡，"],["q2","懈怠使人挨餓。"],["v","16"],["","遵守誡命的保全性命，"],["q2","藐視正道的自尋死路。"],["v","17"],["","善待窮人等於借貸給耶和華，"],["q2","耶和華必回報他的善行。"],["v","18"],["","管教孩子宜早不宜晚，"],["q2","不可任由他走向滅亡。"],["v","19"],["","脾氣暴躁的人必吃苦頭。"],["q2","你若救他，一次肯定不夠。"],["v","20"],["","你要受教聽勸，"],["q2","終必得到智慧。"],["v","21"],["","人心中有許多計劃，"],["q2","唯耶和華的旨意成就。"],["v","22"],["","人心愛慕忠誠，"],["q2","受窮勝過撒謊。"],["v","23"],["","敬畏耶和華使人得享生命，"],["q2","安然滿足，免遭禍患。"],["v","24"],["","懶惰人手放在餐盤，"],["q2","卻懶得送食物進嘴。"],["v","25"],["","責打嘲諷者，愚人學會謹慎；"],["q2","責備明哲，他會增長見識。"],["v","26"],["","苛待父親的人可鄙，"],["q2","逼走母親的人可恥。"],["v","27"],["","孩子啊，你若不聽教誨，"],["q2","就會偏離知識。"],["v","28"],["","作偽證者嘲諷公義，"],["q2","惡人的口吞吃罪惡。"],["v","29"],["","刑罰用來對付嘲諷者，"],["q2","鞭子用來責打愚人背。"]]