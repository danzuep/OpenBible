[["c","17"],["cl","第17篇"],["s4","無辜者的祈禱"],["d","大衛的祈禱。"],["v","1"],["","耶和華啊，"],["q1","求你聽我祈求公義的聲音，"],["q1","側耳聽我的呼求，"],["q1","垂聽我真誠的禱告。"],["v","2"],["","願你宣判我無罪，"],["q1","願你明察是非。"],["v","3"],["","你試驗過我的心思，"],["q1","夜間鑒察過我，磨煉過我，"],["q1","找不出任何過犯；"],["q1","我立志口不犯罪。"],["v","4"],["","我遵守你的教導，潔身自守，"],["q1","不與殘暴之徒同流。"],["v","5"],["","我堅定地走你的道路，"],["q1","腳步從未偏離。"],["v","6"],["","上帝啊！我向你求告，"],["q1","因為你必應允我。"],["q1","求你側耳聽我的禱告。"],["v","7"],["","求你彰顯你奇妙的慈愛，"],["q1","用右手拯救投靠你的人脫離仇敵。"],["v","8"],["","求你保護我，像保護眼中的瞳人，"],["q1","用你的翅膀蔭庇我，"],["v","9"],["","救我脫離惡人的攻擊，"],["q1","脫離四圍殺氣騰騰的仇敵。"],["v","10"],["","他們良心喪盡，口出狂言。"],["v","11"],["","他們窮追圍堵，"],["q1","伺機把我打倒在地。"],["v","12"],["","他們像急於撕碎獵物的餓獅，"],["q1","又像蹲伏在暗處的猛獅。"],["v","13"],["","耶和華啊，"],["q1","求你起來迎頭擊倒他們，"],["q1","求你持刀救我脫離惡人。"],["v","14"],["","耶和華啊，"],["q1","求你伸手救我脫離這些人，"],["q1","脫離這些只在今生有福分的世人。"],["q1","你使他們財寶無數。"],["q1","他們兒女眾多，"],["q1","還把財富留給子孫。"],["v","15"],["","但我必因公義而得見你的面；"],["q1","我醒來見到你的真容就心滿意足了。"]]