[["c","72"],["cl","第72篇"],["s4","為君王祈禱"],["d","所羅門的詩。"],["v","1"],["","上帝啊，"],["q1","求你將你的公正賜給王，"],["q1","將你的公義賜給王的兒子。"],["v","2"],["","讓他憑公義審判你的子民，"],["q1","按公平對待那些貧苦的人。"],["v","3"],["","願大山給百姓帶來繁榮，"],["q1","小山帶來公義。"],["v","4"],["","願他為百姓中受苦的人主持公道，"],["q1","拯救貧窮的人，打倒欺壓者。"],["v","5"],["","只要日月尚存，"],["q1","願百姓世世代代敬畏你。"],["v","6"],["","願他的統治如春雨降在新割過的草場上，"],["q1","又像甘霖滋潤大地。"],["v","7"],["","在他統治之下，"],["q1","願義人興旺，國富民強，"],["q1","如月長存。"],["v","8"],["","願他的疆域橫跨洋海，"],["q1","從"],["pn","幼發拉底"],["","河直到地極。"],["v","9"],["","願曠野的居民都來向他下拜，"],["q1","敵人都仆倒在塵土中。"],["v","10"],["","願"],["pn","他施"],["","和海島的君王都納貢稱臣，"],["q1","願"],["pn","示巴"],["","和"],["pn","西巴"],["","的君王都獻上禮物。"],["v","11"],["","願君王都敬拜他，"],["q1","萬國都事奉他。"],["v","12"],["","貧窮人呼求，他便搭救；"],["q1","困苦人無助，他就伸出援手。"],["v","13"],["","他憐憫軟弱和貧困的人，"],["q1","拯救貧困人的性命。"],["v","14"],["","他要救他們脫離壓迫和暴力，"],["q1","因為他愛惜他們的生命。"],["v","15"],["","願王壽命長久，"],["q1","願人將"],["pn","示巴"],["","的金子獻給他，"],["q1","願人不斷為他禱告，終日祝福他。"],["v","16"],["","願遍地五穀豐登，"],["q1","山頂上晃動著累累果實，"],["q1","如"],["pn","黎巴嫩"],["","的密林。"],["q1","願各城人口稠密如原野的青草。"],["v","17"],["","願他的名流芳百世，如日長存。"],["q1","願萬國都因他而蒙福，"],["q1","並稱他是有福的。"],["v","18"],["pn","以色列"],["","的上帝耶和華當受稱頌，"],["q1","唯有祂行奇妙的事。"],["v","19"],["","願祂榮耀的名永受稱頌！"],["q1","願普天下充滿祂的榮耀。"],["q1","阿們！阿們！"],["v","20"],["pn","耶西"],["","的兒子"],["pn","大衛"],["","的禱告結束。"]]