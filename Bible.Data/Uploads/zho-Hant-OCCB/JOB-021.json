[["c","21"],["s1","約伯的回答"],["v","1"],["pn","約伯"],["","回答說："],["v","2"],["","「你們仔細聽我說，"],["q1","便是給我的慰藉。"],["v","3"],["","請容忍我把話說完，"],["q1","之後任憑你們嘲笑。"],["v","4"],["","我豈是向人抱怨？"],["q1","我有理由不耐煩。"],["v","5"],["","你們看到我會大吃一驚，"],["q1","嚇得用手掩口。"],["v","6"],["","我一想到自己，就心驚膽戰，"],["q1","渾身發抖。"],["v","7"],["","為何惡人活著，得享長壽，"],["q1","勢力強大？"],["v","8"],["","他們的兒孫圍繞膝前，"],["q1","他們得見後代茁壯成長。"],["v","9"],["","他們家中平安無懼，"],["q1","他們不被上帝杖打。"],["v","10"],["","他們的公牛繁殖力強，"],["q1","他們的母牛從不掉胎。"],["v","11"],["","他們讓孩童像羊群一樣走到戶外，"],["q1","盡情地歡跳。"],["v","12"],["","他們伴著鈴鼓和豎琴歌唱，"],["q1","在笛聲中歡喜不已。"],["v","13"],["","他們一生幸福，"],["q1","安然下到陰間。"],["v","14"],["","他們對上帝說，『離開我們，"],["q1","我們不想學習你的道。"],["v","15"],["","全能者是誰，竟要我們事奉祂？"],["q1","向祂禱告有何益處？』"],["v","16"],["","看啊，他們的幸福不在他們手中；"],["q1","因此，我決不苟同他們的謀劃。"],["v","17"],["","「惡人的燈何曾熄滅？"],["q1","災難何曾臨到他們？"],["q1","上帝何曾發怒使他們受苦？"],["v","18"],["","他們何曾像風中的碎稭，"],["q1","像被暴風捲去的糠秕？"],["v","19"],["","你們說上帝會把懲罰留給他們的兒女，"],["q1","我認為不如報應在他們本人身上，"],["q1","讓他們親自領教。"],["v","20"],["","願他們親眼看見自己滅亡。"],["q1","願他們喝下全能者的烈怒。"],["v","21"],["","因為他們的歲月一旦度盡，"],["q1","又怎會關心身後的家人？"],["v","22"],["","「上帝既審判身居高位者，"],["q1","誰還能傳授知識給祂？"],["v","23"],["","有人至死仍充滿活力，"],["q1","盡享平靖安逸。"],["v","24"],["","他營養充足，"],["q1","骨骼健壯。"],["v","25"],["","有人至死心中苦痛，"],["q1","從未嘗過幸福的滋味。"],["v","26"],["","二者都埋入塵土，"],["q1","被蛆蟲覆蓋。"],["v","27"],["","我知道你們的想法，"],["q1","並那些冤枉我的詭計。"],["v","28"],["","你們問，『權貴的房子如今何在？"],["q1","惡人住的帳篷今在何方？』"],["v","29"],["","難道你們沒有問過旅客，"],["q1","不接受他們的說法？"],["v","30"],["","就是惡人在災難之日倖存，"],["q1","在上帝發怒之日得以逃脫。"],["v","31"],["","誰會當面斥責他們的惡行，"],["q1","因其所作所為而報應他們？"],["v","32"],["","他們被抬入墳墓後，"],["q1","還有人看守墓地。"],["v","33"],["","他們在谷中的沃土安息，"],["q1","送葬的人前擁後隨，不計其數。"],["v","34"],["","你們的空談怎能安慰我？"],["q1","你們的回答純屬荒謬。」"]]