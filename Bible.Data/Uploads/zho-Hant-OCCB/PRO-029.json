[["c","29"],["v","1"],["","屢教不改、頑固不化者，"],["q2","必突然滅亡，無可挽救。"],["v","2"],["","義人增多，民眾歡騰；"],["q2","惡人得勢，民眾歎息。"],["v","3"],["","愛慕智慧的使父親歡欣，"],["q2","結交妓女的必耗盡錢財。"],["v","4"],["","君王秉公行義，國家安定；"],["q2","他若收受賄賂，國必傾倒。"],["v","5"],["","奉承鄰舍，等於設網羅絆他。"],["v","6"],["","惡人被自己的罪纏住，"],["q2","義人卻常常歡喜歌唱。"],["v","7"],["","義人關心窮人的冤屈，"],["q2","惡人對此漠不關心。"],["v","8"],["","狂徒煽動全城，"],["q2","智者平息眾怒。"],["v","9"],["","智者跟愚人對簿公堂，"],["q2","愚人會怒罵嬉笑不止。"],["v","10"],["","嗜殺之徒憎惡純全無過的人，"],["q2","但正直的人保護他們"],["","。"],["v","11"],["","愚人盡情發洩怒氣，"],["q2","智者默然克制怒氣。"],["v","12"],["","君王若聽讒言，"],["q2","臣僕必成奸徒。"],["v","13"],["","貧窮人和欺壓者有共同點："],["q2","他們的眼睛都是耶和華所賜。"],["v","14"],["","君王若秉公審判窮人，"],["q2","他的王位必永遠堅立。"],["v","15"],["","管教之杖使孩子得智慧，"],["q2","放縱的子女讓母親蒙羞。"],["v","16"],["","惡人當道，罪惡氾濫；"],["q2","義人必得見他們敗亡。"],["v","17"],["","好好管教兒子，"],["q2","他會帶給你平安，使你心裡喜樂。"],["v","18"],["","百姓無神諭便任意妄為，"],["q2","但遵守律法的人必蒙福。"],["v","19"],["","管教僕人不能單靠言語，"],["q2","因為他雖明白卻不理會。"],["v","20"],["","言語急躁的人，"],["q2","還不如愚人有希望。"],["v","21"],["","從小嬌縱的僕人，"],["q2","最終必反仆為主。"],["v","22"],["","憤怒的人挑起紛爭，"],["q2","暴躁的人多有過犯。"],["v","23"],["","驕傲的人必遭貶抑，"],["q2","謙卑的人必得尊榮。"],["v","24"],["","與盜賊為伍是憎惡自己，"],["q2","他即使發誓也不敢作證。"],["v","25"],["","懼怕人的必自陷網羅，"],["q2","信靠耶和華的必安穩。"],["v","26"],["","許多人討君王的歡心，"],["q2","但正義伸張靠耶和華。"],["v","27"],["","為非作歹，義人厭惡；"],["q2","行為正直，惡人憎恨。"]]