[["c","11"],["v","1"],["","耶和華憎惡騙人的天平，"],["q2","喜愛公平的砝碼。"],["v","2"],["","傲慢帶來羞辱，"],["q2","謙卑者有智慧。"],["v","3"],["","正直人被誠實引導，"],["q2","奸詐者被奸詐毀滅。"],["v","4"],["","在降怒之日，財富毫無益處，"],["q2","唯有公義能救人免於死亡。"],["v","5"],["","純全人行義走坦途，"],["q2","惡人作惡致沉淪。"],["v","6"],["","正直人被義行所救，"],["q2","奸詐者被私慾所擄。"],["v","7"],["","惡人一死，他的希望就破滅，"],["q2","他對財勢的冀望轉眼成空。"],["v","8"],["","義人脫離患難，"],["q2","惡人落入其中。"],["v","9"],["","不敬虔者張口敗壞鄰舍，"],["q2","義人卻因知識獲得拯救。"],["v","10"],["","義人亨通，全城快樂；"],["q2","惡人滅亡，人人歡呼。"],["v","11"],["","城因正直人的祝福而興盛，"],["q2","因惡人的口舌而傾覆。"],["v","12"],["","無知者輕視鄰舍，"],["q2","明哲保持緘默。"],["v","13"],["","嚼舌者洩露秘密，"],["q2","忠信者守口如瓶。"],["v","14"],["","缺乏智謀，國必敗亡；"],["q2","謀士眾多，戰無不勝。"],["v","15"],["","為他人作保，必受虧損；"],["q2","厭惡當保人，得享平安。"],["v","16"],["","賢淑的女子得到尊榮，"],["q2","殘暴的男子得到資財。"],["v","17"],["","仁慈的人造福自己，"],["q2","殘酷的人惹禍上身。"],["v","18"],["","惡人賺來的轉眼成空，"],["q2","播種公義的必獲獎賞。"],["v","19"],["","堅持行義，必得生命；"],["q2","追逐罪惡，終必滅亡。"],["v","20"],["","心術不正的人令耶和華憎惡，"],["q2","純全無過的人蒙耶和華喜愛。"],["v","21"],["","惡人終必受到懲罰，"],["q2","義人的子孫必得拯救。"],["v","22"],["","女子貌美無內涵，"],["q2","如同豬鼻掛金環。"],["v","23"],["","義人的願望結出善果，"],["q2","惡人的希望招致烈怒。"],["v","24"],["","有人樂善好施，反倒越來越富；"],["q2","有人極其吝嗇，反而越來越窮。"],["v","25"],["","慷慨好施的必得昌盛，"],["q2","恩待他人的必蒙恩待。"],["v","26"],["","囤糧不賣，惹人咒詛；"],["q2","樂意賣糧，必蒙祝福。"],["v","27"],["","尋求良善得恩惠，"],["q2","追求罪惡遭禍患。"],["v","28"],["","倚仗財勢者必衰敗，"],["q2","義人必興旺如綠葉。"],["v","29"],["","禍害自家，必一無所有，"],["q2","愚人必做智者的僕役。"],["v","30"],["","義人結果如生命之樹，"],["q2","智者深得人心。"],["v","31"],["","看啊！義人在世上尚且遭報"],["","，"],["q2","更何況惡人和罪人呢！"]]