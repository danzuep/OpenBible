[["c","39"],["v","1"],["","「你知道野山羊何時生產嗎？"],["q1","你看過母鹿產仔嗎？"],["v","2"],["","你能算出牠們懷胎的月數嗎？"],["q1","你知道牠們分娩的日期嗎？"],["v","3"],["","牠們屈身產仔，"],["q1","結束分娩之痛。"],["v","4"],["","幼仔健壯，在荒野長大，"],["q1","離群而去，不再回來。"],["v","5"],["","「誰讓野驢逍遙自在？"],["q1","誰解開了牠的韁繩？"],["v","6"],["","我使牠以曠野為家，"],["q1","以鹽地作居所。"],["v","7"],["","牠嗤笑城邑的喧鬧，"],["q1","不聽趕牲口的吆喝。"],["v","8"],["","牠以群山作牧場，"],["q1","尋找各種青草。"],["v","9"],["","「野牛豈肯為你效勞，"],["q1","在你的槽旁過夜？"],["v","10"],["","你豈能用韁繩把野牛牽到犁溝？"],["q1","牠豈肯跟著你在山谷耕地？"],["v","11"],["","你豈能倚靠牠的大力，"],["q1","把你的重活交給牠？"],["v","12"],["","豈能靠牠運回糧食，"],["q1","替你堆聚到麥場？"],["v","13"],["","「鴕鳥歡然拍動翅膀，"],["q1","牠豈有白鸛的翎羽？"],["v","14"],["","牠將蛋產在地上，"],["q1","使蛋得到沙土的溫暖，"],["v","15"],["","卻不知蛋會被踩碎，"],["q1","或遭野獸踐踏。"],["v","16"],["","牠苛待雛鳥，好像牠們並非己出，"],["q1","就算徒勞一場，牠也不怕。"],["v","17"],["","因為上帝未賜牠智慧，"],["q1","沒有給牠悟性。"],["v","18"],["","然而，一旦牠展翅奔跑，"],["q1","必嗤笑馬兒和騎士。"],["v","19"],["","「馬的力量豈是你賜的？"],["q1","牠頸上的鬃毛豈是你披的？"],["v","20"],["","豈是你使牠跳躍如蝗蟲，"],["q1","發出令人膽寒的長嘶？"],["v","21"],["","牠在谷中刨地，"],["q1","炫耀力量，奮力衝向敵軍。"],["v","22"],["","牠嘲笑恐懼，毫不害怕，"],["q1","不因刀劍而退縮。"],["v","23"],["","牠背上的箭袋錚錚作響，"],["q1","長矛和標槍閃閃發光。"],["v","24"],["","角聲一響，牠便無法靜立，"],["q1","異常亢奮，急於馳騁大地。"],["v","25"],["","聽到角聲，牠就發出長嘶，"],["q1","牠老遠便嗅到戰爭的氣味，"],["q1","並聽見吶喊和將領的號令。"],["v","26"],["","「鷹隼展翅翱翔，飛往南方，"],["q1","豈是靠你的智慧？"],["v","27"],["","禿鷹騰飛，在高處搭窩，"],["q1","豈是奉你的命令？"],["v","28"],["","牠居住在懸崖上，"],["q1","盤踞在山巖峭壁，"],["v","29"],["","牠從那裡搜尋獵物，"],["q1","牠的目光直達遠方。"],["v","30"],["","牠的幼雛噬血，"],["q1","哪裡有屍體，牠就在哪裡。」"]]