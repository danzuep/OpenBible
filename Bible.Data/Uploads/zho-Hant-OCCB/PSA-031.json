[["c","31"],["cl","第31篇"],["s4","信靠上帝的禱告"],["d","大衛的詩，交給樂長。"],["v","1"],["","耶和華啊，我投靠你，"],["q1","求你讓我永不蒙羞；"],["q1","求你憑公義搭救我。"],["v","2"],["","求你側耳聽我的呼求，"],["q1","快來救我，作我避難的磐石，"],["q1","作拯救我的堡壘。"],["v","3"],["","因為你是我的磐石，我的堡壘，"],["q1","求你為了自己的名而引導我，"],["q1","帶領我。"],["v","4"],["","你是我的避難所，"],["q1","求你救我脫離人們為我設下的陷阱。"],["v","5"],["","我將我的靈魂交在你手中。"],["q1","信實的上帝耶和華啊，"],["q1","你必救贖我。"],["v","6"],["","我憎恨拜假神的人，"],["q1","我只信靠耶和華。"],["v","7"],["","你已經看見我的困苦，"],["q1","知道我心中的愁煩，"],["q1","我因你的恩慈而歡喜快樂。"],["v","8"],["","你沒有將我交在仇敵手中，"],["q1","你使我雙腳站在寬闊之地。"],["v","9"],["","耶和華啊，我落在苦難之中，"],["q1","求你憐憫我，"],["q1","愁苦令我眼目昏聵，身心疲憊。"],["v","10"],["","我的生命被愁苦吞噬，"],["q1","歲月被哀傷耗盡，"],["q1","力量因罪惡而消逝，"],["q1","我成了枯骨一堆。"],["v","11"],["","仇敵羞辱我，"],["q1","鄰居厭棄我，"],["q1","朋友害怕我，"],["q1","路人紛紛躲避我。"],["v","12"],["","我被人遺忘，就像已死之人，"],["q1","又像破碎的陶器。"],["v","13"],["","我聽見許多人竊竊私語，"],["q1","恐怖四下瀰漫。"],["q1","他們圖謀不軌，"],["q1","謀害我的性命。"],["v","14"],["","然而，耶和華啊，"],["q1","我依然信靠你；"],["q1","我說：「你是我的上帝。」"],["v","15"],["","我的時日都掌握在你手中，"],["q1","求你救我脫離仇敵和追逼我的人。"],["v","16"],["","求你以容光照耀僕人，"],["q1","施慈愛拯救我。"],["v","17"],["","耶和華啊，我曾向你呼求，"],["q1","求你不要叫我蒙羞。"],["q1","求你使惡人蒙羞，"],["q1","在陰間寂然無聲。"],["v","18"],["","願撒謊之人啞聲，"],["q1","他們驕傲自大，"],["q1","狂言攻擊義人。"],["v","19"],["","你的恩惠何其大，"],["q1","是為敬畏你的人預備的，"],["q1","在世人面前賜給投靠你的人。"],["v","20"],["","你把他們藏在你那裡，"],["q1","使他們得到庇護，"],["q1","免遭世人暗算。"],["q1","你使他們躲在避難所，"],["q1","免受惡言惡語的攻擊。"],["v","21"],["","耶和華當受稱頌！"],["q1","因為我被困城中時，"],["q1","祂以奇妙的愛待我。"],["v","22"],["","我曾驚恐地說："],["q1","「我從你面前被棄絕！」"],["q1","其實我求助的時候，"],["q1","你聽了我的呼求。"],["v","23"],["","耶和華忠心的子民啊，"],["q1","你們要愛祂。"],["q1","祂保護忠心的人，"],["q1","嚴懲驕傲的人。"],["v","24"],["","凡等候耶和華的人啊，"],["q1","要剛強壯膽！"]]