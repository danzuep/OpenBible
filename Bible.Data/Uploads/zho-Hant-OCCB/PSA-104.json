[["c","104"],["cl","第104篇"],["s4","稱頌創造主上帝"],["v","1"],["","我的心啊，要稱頌耶和華。"],["q1","我的上帝耶和華啊，"],["q1","你是多麼偉大！"],["q1","你以尊貴和威嚴為衣，"],["v","2"],["","你身披光華如披外袍，"],["q1","你鋪展穹蒼如鋪幔子。"],["v","3"],["","祂在水上立起樓閣的棟梁。"],["q1","祂以雲彩為車駕，乘風飛馳。"],["v","4"],["","祂以風為使者，"],["q1","以火焰為僕役。"],["v","5"],["","祂將大地立在根基上，"],["q1","使它永不動搖。"],["v","6"],["","你以深水為衣覆蓋大地，"],["q1","使大水淹沒群山。"],["v","7"],["","你一聲怒叱，眾水便奔逃；"],["q1","你一聲雷鳴，眾水就奔流，"],["v","8"],["","漫過山巒，流進山谷，"],["q1","歸到你指定的地方。"],["v","9"],["","你為眾水劃定不可逾越的界線，"],["q1","以免大地再遭淹沒。"],["v","10"],["","耶和華使泉水湧流在谷地，"],["q1","奔騰在山間，"],["v","11"],["","讓野地的動物有水喝，"],["q1","野驢可以解渴。"],["v","12"],["","飛鳥也在溪旁棲息，"],["q1","在樹梢上歌唱。"],["v","13"],["","祂從天上的樓閣降雨在山間，"],["q1","大地因祂的作為而豐美富饒。"],["v","14"],["","祂使綠草生長，滋養牲畜，"],["q1","讓人種植作物，"],["q1","享受大地的出產，"],["v","15"],["","有沁人心懷的醇酒、"],["q1","滋潤容顏的膏油、"],["q1","增強活力的五穀。"],["v","16"],["","耶和華種植了"],["pn","黎巴嫩"],["","的香柏樹，"],["q1","使它們得到充沛的水源，"],["v","17"],["","鳥兒在樹上搭窩，"],["q1","鸛鳥在松樹上棲息。"],["v","18"],["","高山是野山羊的住處，"],["q1","峭壁是石獾的藏身之所。"],["v","19"],["","你命月亮定節令，"],["q1","使太陽自知西沉。"],["v","20"],["","你造黑暗，定為夜晚，"],["q1","作林中百獸出沒的時間。"],["v","21"],["","猛獅吼叫著覓食，"],["q1","尋找上帝所賜的食物。"],["v","22"],["","太陽升起，"],["q1","百獸便躲避，臥在洞中，"],["v","23"],["","人們外出工作，直到黃昏。"],["v","24"],["","耶和華啊，你的創造如此繁多！"],["q1","你用智慧造了這一切，"],["q1","大地充滿了你創造的萬物。"],["v","25"],["","汪洋浩瀚，"],["q1","充滿了無數的大小水族，"],["v","26"],["","船隻往來於海上，"],["q1","你造的海怪也在水中嬉戲。"],["v","27"],["","牠們都倚靠你按時供應食物。"],["v","28"],["","你賜下食物，牠們才有吃的，"],["q1","你伸手賜下美食，牠們才得飽足。"],["v","29"],["","你若掩面不顧牠們，"],["q1","牠們會驚慌失措。"],["q1","你一收回牠們的氣息，"],["q1","牠們便死亡，歸於塵土。"],["v","30"],["","你一吹氣便創造了牠們，"],["q1","你使大地煥然一新。"],["v","31"],["","願耶和華的榮耀存到永遠！"],["q1","願耶和華以祂的創造為樂！"],["v","32"],["","祂一看大地，大地就震動；"],["q1","祂一摸群山，群山就冒煙。"],["v","33"],["","我要一生一世向耶和華歌唱，"],["q1","我一息尚存就要讚美我的上帝。"],["v","34"],["","願祂喜悅我的默想，"],["q1","耶和華是我的喜樂。"],["v","35"],["","願罪人從地上消逝，"],["q1","願惡人蕩然無存。"],["q1","我的心啊，要稱頌耶和華！"],["q1","你們要讚美耶和華！"]]