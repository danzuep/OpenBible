[["c","14"],["v","1"],["","智慧的女子建立家室，"],["q2","愚昧的女子親手拆毀。"],["v","2"],["","行為正直的人敬畏耶和華，"],["q2","行事邪僻的人輕視耶和華。"],["v","3"],["","愚人的狂言招來鞭打，"],["q2","智者的唇舌保護自己。"],["v","4"],["","沒有耕牛槽頭淨，"],["q2","五穀豐登需壯牛。"],["v","5"],["","忠實的證人不會撒謊，"],["q2","虛假的證人謊話連篇。"],["v","6"],["","嘲諷者徒然尋智慧，"],["q2","明哲輕易得知識。"],["v","7"],["","你要遠離愚昧人，"],["q2","他口中毫無知識。"],["v","8"],["","明哲憑智慧辨道，"],["q2","愚人被愚昧欺騙。"],["v","9"],["","愚妄人戲看罪惡，"],["q2","正直人彼此恩待。"],["v","10"],["","心頭的愁苦，唯有自己明白；"],["q2","心中的喜樂，外人無法分享。"],["v","11"],["","惡人的房屋必遭毀滅，"],["q2","正直人的帳篷必興盛。"],["v","12"],["","有一條路看似正確，"],["q2","最終卻通向死亡。"],["v","13"],["","歡笑難消內心的痛苦，"],["q2","歡樂過後，悲傷猶在。"],["v","14"],["","背棄正道，自食惡果；"],["q2","善人行善，必得善報。"],["v","15"],["","愚人什麼都信，"],["q2","明哲步步謹慎。"],["v","16"],["","智者小心謹慎，遠離惡事；"],["q2","愚人驕傲自負，行事魯莽。"],["v","17"],["","急躁易怒的人做事愚昧，"],["q2","陰險奸詐之人遭人痛恨。"],["v","18"],["","愚人得愚昧作產業，"],["q2","明哲得知識為冠冕。"],["v","19"],["","壞人俯伏在善人面前，"],["q2","惡人俯伏在義人門口。"],["v","20"],["","窮人遭鄰舍厭，"],["q2","富人朋友眾多。"],["v","21"],["","藐視鄰舍是罪過，"],["q2","憐憫窮人蒙福樂。"],["v","22"],["","圖謀惡事的步入歧途，"],["q2","行善的得慈愛與忠誠。"],["v","23"],["","殷勤工作，帶來益處；"],["q2","滿嘴空談，導致貧窮。"],["v","24"],["","智者以財富為冠冕，"],["q2","愚人以愚昧為裝飾。"],["v","25"],["","誠實的證人挽救性命，"],["q2","口吐謊言者欺騙他人。"],["v","26"],["","敬畏耶和華的信心堅定，"],["q2","他的子孫也有庇護所。"],["v","27"],["","敬畏耶和華是生命之泉，"],["q2","可使人避開死亡的陷阱。"],["v","28"],["","人口眾多，是君王的榮耀；"],["q2","沒有臣民，君主必然敗亡。"],["v","29"],["","不輕易發怒者深明事理，"],["q2","魯莽急躁的人顯出愚昧。"],["v","30"],["","心平氣和，滋潤生命；"],["q2","妒火中燒，啃蝕骨頭。"],["v","31"],["","欺壓窮人等於侮辱造物主，"],["q2","憐憫貧弱就是尊敬造物主。"],["v","32"],["","惡人因惡行而滅亡，"],["q2","義人到死仍有倚靠。"],["v","33"],["","智慧存在哲士心裡，"],["q2","愚人心中充滿無知。"],["v","34"],["","公義能叫邦國興盛，"],["q2","罪惡是人民的恥辱。"],["v","35"],["","明智的臣子蒙王喜悅，"],["q2","可恥的僕人惹王發怒。"]]