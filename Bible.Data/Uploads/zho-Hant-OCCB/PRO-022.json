[["c","22"],["v","1"],["","美名勝過巨富，"],["q2","恩寵好過金銀。"],["v","2"],["","富人和窮人同世而立，"],["q2","二者皆由耶和華所造。"],["v","3"],["","明哲遇禍躲避，"],["q2","愚人前去受害。"],["v","4"],["","心存謙卑、敬畏耶和華，"],["q2","必得財富、尊榮和生命。"],["v","5"],["","奸徒之道有荊棘和陷阱，"],["q2","想保全生命的必須遠避。"],["v","6"],["","教導孩童走正路，"],["q2","他到老也不偏離。"],["v","7"],["","富人管轄窮人，"],["q2","欠債的是債主的僕人。"],["v","8"],["","播種不義的必收災禍，"],["q2","他暴怒的杖必被折斷。"],["v","9"],["","慷慨的人必蒙福，"],["q2","因他給窮人食物。"],["v","10"],["","趕走嘲諷者，紛爭平息，"],["q2","爭吵和羞辱也會消除。"],["v","11"],["","喜愛清心、口吐恩言的人，"],["q2","必與君王為友。"],["v","12"],["","耶和華的眼目護衛知識，"],["q2","祂必推翻奸徒的言論。"],["v","13"],["","懶惰人說：「外面有獅子，"],["q2","我會命喪街頭。」"],["v","14"],["","淫婦的口是深坑，"],["q2","耶和華憎惡的人必陷進去。"],["v","15"],["","愚昧纏住孩童的心，"],["q2","教棍能遠遠趕走它。"],["v","16"],["","靠壓榨窮人斂財和送禮給富人的，"],["q2","都必窮困潦倒。"],["s1","智者之言"],["v","17"],["","你要側耳聽智者之言，"],["q2","專心領受我的教誨，"],["v","18"],["","銘記在心、隨時誦詠，"],["q2","方為美事。"],["v","19"],["","今天我將這些指示你，"],["q2","為要使你倚靠耶和華。"],["v","20"],["","關於謀略和知識，"],["q2","我已寫給你三十條，"],["v","21"],["","要使你認識真理，"],["q2","好如實答覆差你來的人。"],["v","22"],["","不可仗勢剝削貧窮人，"],["q2","法庭上不可欺凌困苦者，"],["v","23"],["","因為耶和華必為他們伸冤，"],["q2","奪去掠奪他們之人的性命。"],["v","24"],["","不可結交脾氣暴躁者，"],["q2","不要跟易怒之人來往，"],["v","25"],["","免得你沾染他們的惡習，"],["q2","不能自拔。"],["v","26"],["","不要為人擊掌作保，"],["q2","不要為欠債的抵押。"],["v","27"],["","如果你還不起，"],["q2","連你的床也會被抬走。"],["v","28"],["","不可移動祖先定下的界石。"],["v","29"],["","你看那精明能幹的人，"],["q2","他必侍立在君王面前，"],["q2","不會效力於泛泛之輩。"]]