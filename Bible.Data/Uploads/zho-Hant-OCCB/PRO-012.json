[["c","12"],["v","1"],["","喜愛管教的喜愛知識，"],["q2","厭惡責備的愚不可及。"],["v","2"],["","善良的人蒙耶和華賜恩，"],["q2","詭詐的人被耶和華定罪。"],["v","3"],["","人不能靠惡行堅立自己，"],["q2","義人的根基卻不會動搖。"],["v","4"],["","賢德的妻子是丈夫的冠冕，"],["q2","無恥的妻子如丈夫的骨瘤。"],["v","5"],["","義人的心思公平正直，"],["q2","惡人的計謀陰險詭詐。"],["v","6"],["","惡人的言語暗藏殺機，"],["q2","正直人的口拯救生命。"],["v","7"],["","惡人覆滅不復存在，"],["q2","義人的家屹立不倒。"],["v","8"],["","人有智慧受稱讚，"],["q2","心術不正遭唾棄。"],["v","9"],["","地位卑微卻有僕人，"],["q2","勝過自大卻餓肚子。"],["v","10"],["","義人顧惜自己的牲畜，"],["q2","惡人的憐憫也是殘忍。"],["v","11"],["","努力耕耘，豐衣足食；"],["q2","追求虛榮，愚不可及。"],["v","12"],["","惡人貪戀壞人的贓物，"],["q2","義人的根結出碩果。"],["v","13"],["","惡人被自己的惡言所困，"],["q2","但義人可以脫離險境。"],["v","14"],["","口出良言，飽嘗美福；"],["q2","雙手勤勞，終得回報。"],["v","15"],["","愚人自以為是，"],["q2","智者肯聽勸誡。"],["v","16"],["","愚人難壓怒氣，"],["q2","明哲忍辱負重。"],["v","17"],["","忠實的證人講真話，"],["q2","作偽證者滿口謊言。"],["v","18"],["","出言不慎猶如利劍傷人，"],["q2","智者之言卻能醫治創傷。"],["v","19"],["","誠實的口永遠長存，"],["q2","撒謊的舌轉瞬即逝。"],["v","20"],["","圖謀惡事的心懷詭詐，"],["q2","勸人和睦的喜樂洋溢。"],["v","21"],["","義人無災無難，"],["q2","惡人災禍連連。"],["v","22"],["","耶和華厭惡說謊的嘴，"],["q2","祂喜愛行為誠實的人。"],["v","23"],["","明哲不露鋒芒，"],["q2","愚人心吐愚昧。"],["v","24"],["","殷勤的手必掌權，"],["q2","懶惰者必做奴僕。"],["v","25"],["","憂慮的心使人消沉，"],["q2","一句良言振奮人心。"],["v","26"],["","義人引人走正路，"],["q2","惡人領人入歧途。"],["v","27"],["","懶漢不烤獵物，"],["q2","勤快人得資財。"],["v","28"],["","公義的道上有生命，"],["q2","公義的路上無死亡。"]]