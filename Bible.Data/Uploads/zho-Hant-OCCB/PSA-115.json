[["c","115"],["cl","第115篇"],["s4","上帝是獨一真神"],["r","（平行經文："],["","）"],["v","1"],["","耶和華啊，"],["q1","不要將榮耀歸於我們，"],["q1","不要歸於我們。"],["q1","榮耀歸於你的名，"],["q1","因為你慈愛、信實！"],["v","2"],["","為何讓列國說"],["q1","「他們的上帝在哪裡」？"],["v","3"],["","我們的上帝高居在天，"],["q1","按自己的旨意行事。"],["v","4"],["","他們的偶像是人用金銀造的。"],["v","5"],["","它們有口不能言，有眼不能看，"],["v","6"],["","有耳不能聽，有鼻不能聞，"],["v","7"],["","有手不能摸，有腳不能走，"],["q1","有喉嚨也不能發聲。"],["v","8"],["","造偶像的必和偶像一樣，"],["q1","信靠偶像的人也是如此。"],["v","9"],["pn","以色列"],["","人啊，要信靠耶和華！"],["q1","祂是你們的幫助，"],["q1","是你們的盾牌。"],["v","10"],["pn","亞倫"],["","家啊，要信靠耶和華！"],["q1","祂是你們的幫助，"],["q1","是你們的盾牌。"],["v","11"],["","敬畏耶和華的人啊，要信靠祂！"],["q1","祂是你們的幫助，"],["q1","是你們的盾牌。"],["v","12"],["","耶和華顧念我們，賜福給我們。"],["q1","祂要賜福給"],["pn","以色列"],["","人，"],["q1","賜福給"],["pn","亞倫"],["","家。"],["v","13"],["","耶和華要賜福給一切敬畏祂的人，"],["q1","不分尊貴卑賤。"],["v","14"],["","願耶和華使你們和你們的後代人丁興旺！"],["v","15"],["","願創造天地的耶和華賜福給你們！"],["v","16"],["","高天屬於耶和華，"],["q1","但祂把大地賜給了世人。"],["v","17"],["","死人不能頌讚耶和華，"],["q1","下墳墓的人不能讚美祂。"],["v","18"],["","但我們要讚美耶和華，"],["q1","從現在直到永遠。"],["q1","你們要讚美耶和華！"]]