[["c","118"],["cl","第118篇"],["s4","為勝利而感恩"],["v","1"],["","你們要稱謝耶和華，"],["q1","因為祂是美善的，"],["q1","祂的慈愛永遠長存。"],["v","2"],["","願"],["pn","以色列"],["","人說："],["q1","「祂的慈愛永遠長存。」"],["v","3"],["","願"],["pn","亞倫"],["","家說："],["q1","「祂的慈愛永遠長存。」"],["v","4"],["","願那些敬畏耶和華的人說："],["q1","「祂的慈愛永遠長存。」"],["v","5"],["","我在苦難中求告耶和華，"],["q1","祂就答應我，救我脫離困境。"],["v","6"],["","有耶和華與我同在，"],["q1","我必不懼怕，"],["q1","人能把我怎麼樣？"],["v","7"],["","耶和華與我同在，幫助我，"],["q1","我必看見那些恨我的人一敗塗地。"],["v","8"],["","投靠耶和華勝過倚靠人。"],["v","9"],["","投靠耶和華勝過倚靠權貴。"],["v","10"],["","列國圍住我，"],["q1","但我靠著耶和華的名消滅了他們。"],["v","11"],["","他們四面圍住我，"],["q1","但我靠著耶和華的名消滅了他們。"],["v","12"],["","他們如蜜蜂圍住我，"],["q1","然而他們必像燃燒的荊棘，"],["q1","轉瞬消逝；"],["q1","我靠著耶和華的名消滅了他們。"],["v","13"],["","我受到猛烈的攻擊，"],["q1","幾乎要倒下了，"],["q1","但耶和華幫助了我。"],["v","14"],["","耶和華是我的力量，"],["q1","是我的詩歌；"],["q1","祂拯救了我。"],["v","15"],["","義人的帳篷裡傳出勝利的歡呼聲："],["q1","「耶和華用右手施展大能！"],["v","16"],["","耶和華高舉右手，"],["q1","耶和華用右手施展大能！」"],["v","17"],["","我必不至於死，"],["q1","我要活著，"],["q1","並要述說耶和華的作為。"],["v","18"],["","耶和華雖然重重地懲罰我，"],["q1","卻沒有置我於死地。"],["v","19"],["","給我打開公義的門吧，"],["q1","我要進去稱謝耶和華。"],["v","20"],["","這是耶和華的門，"],["q1","義人都可以進去。"],["v","21"],["","耶和華啊！我稱謝你，"],["q1","因為你應允了我的禱告，"],["q1","拯救了我。"],["v","22"],["","工匠丟棄的石頭已成了房角石。"],["v","23"],["","這是耶和華的作為，"],["q1","在我們看來奇妙莫測。"],["v","24"],["","這是耶和華得勝的日子，"],["q1","我們要歡喜快樂。"],["v","25"],["","耶和華啊，求你拯救我們；"],["q1","耶和華啊，求你使我們亨通。"],["v","26"],["","奉耶和華之名來的當受稱頌！"],["q1","我們要在耶和華的殿中祝福你們。"],["v","27"],["","耶和華是上帝，"],["q1","祂的光照亮我們。"],["q1","要用繩索拴住祭牲，"],["q1","牽到祭壇的角那裡。"],["v","28"],["","你是我的上帝，我要稱謝你；"],["q1","你是我的上帝，我要尊崇你。"],["v","29"],["","你們要稱謝耶和華，"],["q1","因為祂是美善的，"],["q1","祂的慈愛永遠長存。"]]