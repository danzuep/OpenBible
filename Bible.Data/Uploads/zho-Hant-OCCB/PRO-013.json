[["c","13"],["v","1"],["","智慧兒聽從父訓，"],["q2","嘲諷者不聽責備。"],["v","2"],["","口出良言嘗善果，"],["q2","奸徒貪行殘暴事"],["","。"],["v","3"],["","說話謹慎，可保性命；"],["q2","口無遮攔，自取滅亡。"],["v","4"],["","懶惰人空有幻想，"],["q2","勤快人心想事成。"],["v","5"],["","義人憎惡虛謊，"],["q2","惡人可憎可恥。"],["v","6"],["","公義守衛正直的人，"],["q2","邪惡傾覆犯罪之徒。"],["v","7"],["","有人裝作富有，"],["q2","其實身無分文；"],["q2","有人假裝貧窮，"],["q2","卻是腰纏萬貫。"],["v","8"],["","富人用財富贖命，"],["q2","窮人卻免受驚嚇。"],["v","9"],["","義人的光燦爛，"],["q2","惡人的燈熄滅。"],["v","10"],["","自高自大招惹紛爭，"],["q2","虛心受教才是睿智。"],["v","11"],["","不義之財必耗盡，"],["q2","勤儉積蓄財富增。"],["v","12"],["","盼望無期，使人憂傷；"],["q2","夙願得償，帶來生機"],["","。"],["v","13"],["","蔑視訓言，自招滅亡；"],["q2","敬畏誡命，必得賞賜。"],["v","14"],["","智者的訓誨是生命之泉，"],["q2","可使人避開死亡的陷阱。"],["v","15"],["","睿智使人蒙恩惠，"],["q2","奸徒之路通滅亡。"],["v","16"],["","明哲知而後行，"],["q2","愚人炫耀愚昧。"],["v","17"],["","奸惡的使者陷入災禍，"],["q2","忠誠的使者帶來醫治。"],["v","18"],["","不受管教的貧窮羞愧，"],["q2","接受責備的受到尊崇。"],["v","19"],["","願望實現使心甘甜，"],["q2","遠離惡事為愚人憎惡。"],["v","20"],["","與智者同行必得智慧，"],["q2","與愚人結伴必受虧損。"],["v","21"],["","禍患追趕罪人，"],["q2","義人必得善報。"],["v","22"],["","善人為子孫留下產業，"],["q2","罪人給義人積聚財富。"],["v","23"],["","窮人的田地出產豐富，"],["q2","因不公而被搶掠一空。"],["v","24"],["","不用杖管教兒女是憎惡他們，"],["q2","疼愛兒女的隨時管教他們。"],["v","25"],["","義人豐衣足食，"],["q2","惡人食不果腹。"]]