[["c","59"],["cl","第59篇"],["s4","祈求上帝佑護"],["d","大衛作的詩，交給樂長，調用「休要毀壞」。當時掃羅派人去監視大衛的家，要殺害大衛。"],["v","1"],["","我的上帝啊，"],["q1","求你救我脫離仇敵，"],["q1","保護我免遭敵人的攻擊。"],["v","2"],["","求你救我脫離作惡之徒，"],["q1","救我脫離嗜血成性之人。"],["v","3"],["","看啊，他們埋伏害我。"],["q1","耶和華啊，我並未犯罪作惡，"],["q1","兇殘的人卻攻擊我。"],["v","4"],["","我沒有過錯，"],["q1","他們卻準備攻擊我。"],["q1","求你起來幫助我，"],["q1","顧念我的困境。"],["v","5"],["","萬軍之耶和華，"],["pn","以色列"],["","的上帝啊，"],["q1","求你起來懲罰列國，"],["q1","不要憐憫奸詐的惡人。"],["qs","（細拉）"],["v","6"],["","他們夜晚回來，"],["q1","嚎叫如狗，在城中遊蕩。"],["v","7"],["","他們出口傷人，舌如利劍，"],["q1","還說：「誰聽得見？」"],["v","8"],["","但你耶和華必嗤笑他們，"],["q1","嘲諷列國。"],["v","9"],["","上帝啊，"],["q1","你是我的力量，我的堡壘，"],["q1","我仰望你。"],["v","10"],["","我的上帝以慈愛待我，"],["q1","祂會幫助我，"],["q1","讓我欣然看見仇敵遭報。"],["v","11"],["","保護我們的主啊，"],["q1","求你不要殺掉他們，"],["q1","免得我的百姓忘記教訓。"],["q1","求你用你的能力驅散他們，"],["q1","使他們淪為卑賤。"],["v","12"],["","他們的嘴巴充滿罪惡，"],["q1","口中盡是咒詛和謊言，"],["q1","願他們陷在狂傲中不能自拔。"],["v","13"],["","求你發烈怒毀滅他們，"],["q1","徹底剷除他們，"],["q1","使普天下都知道上帝在"],["pn","雅各"],["","家掌權。"],["qs","（細拉）"],["v","14"],["","他們夜晚回來，"],["q1","嚎叫如狗，在城中遊蕩，"],["v","15"],["","四處覓食，"],["q1","吃不飽就狂吠不止。"],["v","16"],["","但我要歌頌你的能力，"],["q1","在清晨頌揚你的慈愛，"],["q1","因為你是我的堡壘，"],["q1","是我患難時的避難所。"],["v","17"],["","上帝啊，你是我的力量，"],["q1","我要頌讚你，"],["q1","你是我的堡壘，"],["q1","是以慈愛待我的上帝。"]]