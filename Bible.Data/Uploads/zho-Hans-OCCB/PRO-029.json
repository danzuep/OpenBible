[["c","29"],["v","1"],["","屡教不改、顽固不化者，"],["q2","必突然灭亡，无可挽救。"],["v","2"],["","义人增多，民众欢腾；"],["q2","恶人得势，民众叹息。"],["v","3"],["","爱慕智慧的使父亲欢欣，"],["q2","结交妓女的必耗尽钱财。"],["v","4"],["","君王秉公行义，国家安定；"],["q2","他若收受贿赂，国必倾倒。"],["v","5"],["","奉承邻舍，等于设网罗绊他。"],["v","6"],["","恶人被自己的罪缠住，"],["q2","义人却常常欢喜歌唱。"],["v","7"],["","义人关心穷人的冤屈，"],["q2","恶人对此漠不关心。"],["v","8"],["","狂徒煽动全城，"],["q2","智者平息众怒。"],["v","9"],["","智者跟愚人对簿公堂，"],["q2","愚人会怒骂嬉笑不止。"],["v","10"],["","嗜杀之徒憎恶纯全无过的人，"],["q2","但正直的人保护他们"],["","。"],["v","11"],["","愚人尽情发泄怒气，"],["q2","智者默然克制怒气。"],["v","12"],["","君王若听谗言，"],["q2","臣仆必成奸徒。"],["v","13"],["","贫穷人和欺压者有共同点："],["q2","他们的眼睛都是耶和华所赐。"],["v","14"],["","君王若秉公审判穷人，"],["q2","他的王位必永远坚立。"],["v","15"],["","管教之杖使孩子得智慧，"],["q2","放纵的子女让母亲蒙羞。"],["v","16"],["","恶人当道，罪恶泛滥；"],["q2","义人必得见他们败亡。"],["v","17"],["","好好管教儿子，"],["q2","他会带给你平安，使你心里喜乐。"],["v","18"],["","百姓无神谕便任意妄为，"],["q2","但遵守律法的人必蒙福。"],["v","19"],["","管教仆人不能单靠言语，"],["q2","因为他虽明白却不理会。"],["v","20"],["","言语急躁的人，"],["q2","还不如愚人有希望。"],["v","21"],["","从小娇纵的仆人，"],["q2","最终必反仆为主。"],["v","22"],["","愤怒的人挑起纷争，"],["q2","暴躁的人多有过犯。"],["v","23"],["","骄傲的人必遭贬抑，"],["q2","谦卑的人必得尊荣。"],["v","24"],["","与盗贼为伍是憎恶自己，"],["q2","他即使发誓也不敢作证。"],["v","25"],["","惧怕人的必自陷网罗，"],["q2","信靠耶和华的必安稳。"],["v","26"],["","许多人讨君王的欢心，"],["q2","但正义伸张靠耶和华。"],["v","27"],["","为非作歹，义人厌恶；"],["q2","行为正直，恶人憎恨。"]]