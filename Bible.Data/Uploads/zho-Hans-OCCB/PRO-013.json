[["c","13"],["v","1"],["","智慧儿听从父训，"],["q2","嘲讽者不听责备。"],["v","2"],["","口出良言尝善果，"],["q2","奸徒贪行残暴事"],["","。"],["v","3"],["","说话谨慎，可保性命；"],["q2","口无遮拦，自取灭亡。"],["v","4"],["","懒惰人空有幻想，"],["q2","勤快人心想事成。"],["v","5"],["","义人憎恶虚谎，"],["q2","恶人可憎可耻。"],["v","6"],["","公义守卫正直的人，"],["q2","邪恶倾覆犯罪之徒。"],["v","7"],["","有人装作富有，"],["q2","其实身无分文；"],["q2","有人假装贫穷，"],["q2","却是腰缠万贯。"],["v","8"],["","富人用财富赎命，"],["q2","穷人却免受惊吓。"],["v","9"],["","义人的光灿烂，"],["q2","恶人的灯熄灭。"],["v","10"],["","自高自大招惹纷争，"],["q2","虚心受教才是睿智。"],["v","11"],["","不义之财必耗尽，"],["q2","勤俭积蓄财富增。"],["v","12"],["","盼望无期，使人忧伤；"],["q2","夙愿得偿，带来生机"],["","。"],["v","13"],["","蔑视训言，自招灭亡；"],["q2","敬畏诫命，必得赏赐。"],["v","14"],["","智者的训诲是生命之泉，"],["q2","可使人避开死亡的陷阱。"],["v","15"],["","睿智使人蒙恩惠，"],["q2","奸徒之路通灭亡。"],["v","16"],["","明哲知而后行，"],["q2","愚人炫耀愚昧。"],["v","17"],["","奸恶的使者陷入灾祸，"],["q2","忠诚的使者带来医治。"],["v","18"],["","不受管教的贫穷羞愧，"],["q2","接受责备的受到尊崇。"],["v","19"],["","愿望实现使心甘甜，"],["q2","远离恶事为愚人憎恶。"],["v","20"],["","与智者同行必得智慧，"],["q2","与愚人结伴必受亏损。"],["v","21"],["","祸患追赶罪人，"],["q2","义人必得善报。"],["v","22"],["","善人为子孙留下产业，"],["q2","罪人给义人积聚财富。"],["v","23"],["","穷人的田地出产丰富，"],["q2","因不公而被抢掠一空。"],["v","24"],["","不用杖管教儿女是憎恶他们，"],["q2","疼爱儿女的随时管教他们。"],["v","25"],["","义人丰衣足食，"],["q2","恶人食不果腹。"]]