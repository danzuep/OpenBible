[["c","106"],["cl","第106篇"],["s4","上帝恩待祂的子民"],["r","（平行经文："],["","）"],["v","1"],["","你们要赞美耶和华！"],["q1","要称谢耶和华，"],["q1","因为祂是美善的，"],["q1","祂的慈爱永远长存！"],["v","2"],["","谁能述说耶和华的大能作为？"],["q1","谁能道尽祂当受赞美之处？"],["v","3"],["","那些行事公正，"],["q1","持守公义的人有福了。"],["v","4"],["","耶和华啊！"],["q1","你恩待你子民的时候，"],["q1","求你顾念我；"],["q1","你拯救他们的时候，"],["q1","求你帮助我，"],["v","5"],["","使我看到你所拣选的人繁荣昌盛，"],["q1","与他们同乐，"],["q1","与你的子民一同夸耀。"],["v","6"],["","我们跟祖先一样也犯了罪，"],["q1","行事邪恶。"],["v","7"],["","我们祖先在"],["pn","埃及"],["","漠视你奇妙的作为，"],["q1","忘记你向他们屡施慈爱，"],["q1","在红海边反叛你。"],["v","8"],["","但祂为了自己的名拯救了他们，"],["q1","以彰显祂的大能。"],["v","9"],["","祂斥责红海，海就干了，"],["q1","祂带领他们走过深渊，"],["q1","如履干地。"],["v","10"],["","祂救他们脱离敌人的权势，"],["q1","从仇敌的手中救赎了他们。"],["v","11"],["","海水淹没了敌军，"],["q1","没有一人生还。"],["v","12"],["","那时他们才相信祂的话，"],["q1","歌唱赞美祂。"],["v","13"],["","然而，他们很快忘了祂的作为，"],["q1","不愿等候祂的引导。"],["v","14"],["","他们在旷野大起贪念，"],["q1","在荒野试探上帝。"],["v","15"],["","祂满足了他们的要求，"],["q1","但在他们当中降下了瘟疫。"],["v","16"],["","他们还在营中嫉妒"],["pn","摩西"],["","和耶和华的圣仆"],["pn","亚伦"],["","。"],["v","17"],["","大地裂开吞没了"],["pn","大坍"],["","，"],["q1","埋葬了"],["pn","亚比兰"],["","一伙人。"],["v","18"],["","火在他们的党羽中烧起，"],["q1","烧灭了这些恶人。"],["v","19"],["","他们在"],["pn","何烈"],["","山铸造牛犊，祭拜金属偶像，"],["v","20"],["","他们用吃草之牛的铸像代替荣耀的上帝。"],["v","21"],["","他们忘记了拯救他们的上帝，"],["q1","祂曾在"],["pn","埃及"],["","行奇事，"],["v","22"],["","在"],["pn","含"],["","地行神迹，"],["q1","在红海边行可畏的事。"],["v","23"],["","因此祂说要消灭他们。"],["q1","若不是祂拣选的"],["pn","摩西"],["","站在裂口处向祂求情，"],["q1","祂早已发烈怒毁灭了他们。"],["v","24"],["","他们藐视那佳美之地，"],["q1","不相信祂的应许。"],["v","25"],["","他们在帐篷里发怨言，"],["q1","不听从祂的命令。"],["v","26"],["","因此，祂举手起誓要使他们倒毙在旷野，"],["v","27"],["","使他们的后代倒在列国，分散到各地。"],["v","28"],["","他们与"],["pn","巴力·毗珥"],["","苟合，"],["q1","吃献给假神的祭物。"],["v","29"],["","他们的所作所为触怒耶和华，"],["q1","以致瘟疫降在他们中间。"],["v","30"],["","那时，"],["pn","非尼哈"],["","起来惩罚罪人，"],["q1","瘟疫才停止。"],["v","31"],["","这就是他的义行，世代永存。"],["v","32"],["","他们在"],["pn","米利巴"],["","泉边惹耶和华发怒，"],["q1","连累了"],["pn","摩西"],["","。"],["v","33"],["","因为他们惹"],["pn","摩西"],["","发怒，"],["q1","以致他说了鲁莽的话。"],["v","34"],["","他们没有照耶和华的命令消灭外族人，"],["v","35"],["","反倒与他们混居，"],["q1","仿效他们的习俗，"],["v","36"],["","拜他们的偶像，陷入网罗。"],["v","37"],["","他们把自己的儿女当祭物献给鬼魔，"],["v","38"],["","他们把自己的儿女献给"],["pn","迦南"],["","的偶像作祭物，"],["q1","流他们儿女无辜的血，"],["q1","玷污了那地方。"],["v","39"],["","他们的行为玷污了自己，"],["q1","所作所为使自己沦为淫妇。"],["v","40"],["","耶和华因此向祂的子民发怒，"],["q1","祂厌恶自己的产业，"],["v","41"],["","使他们落在列邦的手中，"],["q1","受敌人的辖制。"],["v","42"],["","他们的敌人压迫他们，"],["q1","他们被制服在敌人手下。"],["v","43"],["","祂多次拯救他们，"],["q1","他们却执意背叛，"],["q1","陷入罪中不能自拔。"],["v","44"],["","但祂听见他们在苦难中呼求时，"],["q1","仍然眷顾他们。"],["v","45"],["","祂顾念与他们所立的约，"],["q1","凭丰盛的慈爱怜悯他们。"],["v","46"],["","祂使掳掠他们的人怜悯他们。"],["v","47"],["","我们的上帝耶和华啊，"],["q1","求你拯救我们，"],["q1","从列国招聚我们，"],["q1","我们好称谢你的圣名，"],["q1","以赞美你为荣。"],["v","48"],["pn","以色列"],["","的上帝耶和华永永远远当受称颂。"],["q1","愿众民都说：“阿们！”"],["q1","你们要赞美耶和华！"]]