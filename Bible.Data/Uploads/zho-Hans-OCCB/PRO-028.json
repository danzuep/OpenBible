[["c","28"],["v","1"],["","恶人未被追赶也逃窜，"],["q2","义人坦然无惧如雄狮。"],["v","2"],["","国中有罪，君王常换；"],["q2","国有哲士，长治久安。"],["v","3"],["","穷人"],["","欺压贫民，"],["q2","如暴雨冲毁粮食。"],["v","4"],["","背弃律法的称赞恶人，"],["q2","遵守律法的抗拒恶人。"],["v","5"],["","邪恶之人不明白公义，"],["q2","寻求耶和华的全然明白。"],["v","6"],["","行为正直的穷人，"],["q2","胜过行事邪僻的富人。"],["v","7"],["","遵守律法的是智慧之子，"],["q2","与贪食者为伍的令父蒙羞。"],["v","8"],["","人放高利贷牟利，"],["q2","是为济贫者积财。"],["v","9"],["","人若不听从律法，"],["q2","他的祷告也可憎。"],["v","10"],["","引诱正直人走邪道，"],["q2","必掉进自己设的陷阱；"],["q2","但纯全无过的人必承受福分。"],["v","11"],["","富人自以为有智慧，"],["q2","却被明智的穷人看透。"],["v","12"],["","义人得胜，众民欢腾；"],["q2","恶人当道，人人躲藏。"],["v","13"],["","自掩其罪，必不亨通；"],["q2","痛改前非，必蒙怜悯。"],["v","14"],["","常敬畏主的必蒙福，"],["q2","心里刚硬的必遭祸。"],["v","15"],["","暴虐的君王辖制穷人，"],["q2","如咆哮的狮、觅食的熊。"],["v","16"],["","昏庸的君王残暴不仁，"],["q2","恨不义之财的享长寿。"],["v","17"],["","背负血债者必终生逃亡，"],["q2","谁也不要帮他。"],["v","18"],["","纯全无过的必蒙拯救，"],["q2","行为邪僻的转眼覆灭。"],["v","19"],["","勤奋耕耘，丰衣足食；"],["q2","追求虚荣，穷困潦倒。"],["v","20"],["","忠信的人必大蒙祝福，"],["q2","急于发财的难免受罚。"],["v","21"],["","徇私偏袒实为不善，"],["q2","人却为一点饼而枉法。"],["v","22"],["","贪婪的人急于发财，"],["q2","却不知贫穷即将临到。"],["v","23"],["","责备人的至终比谄媚者更受爱戴。"],["v","24"],["","窃取父母之财而不知罪者与匪类无异。"],["v","25"],["","贪得无厌的人挑起纷争，"],["q2","信靠耶和华的富足昌盛。"],["v","26"],["","愚人心中自以为是，"],["q2","凭智慧行事的平安稳妥。"],["v","27"],["","周济穷人的一无所缺，"],["q2","视而不见的多受咒诅。"],["v","28"],["","恶人当道，人人躲藏；"],["q2","恶人灭亡，义人增多。"]]