[["c","31"],["cl","第31篇"],["s4","信靠上帝的祷告"],["d","大卫的诗，交给乐长。"],["v","1"],["","耶和华啊，我投靠你，"],["q1","求你让我永不蒙羞；"],["q1","求你凭公义搭救我。"],["v","2"],["","求你侧耳听我的呼求，"],["q1","快来救我，作我避难的磐石，"],["q1","作拯救我的堡垒。"],["v","3"],["","因为你是我的磐石，我的堡垒，"],["q1","求你为了自己的名而引导我，"],["q1","带领我。"],["v","4"],["","你是我的避难所，"],["q1","求你救我脱离人们为我设下的陷阱。"],["v","5"],["","我将我的灵魂交在你手中。"],["q1","信实的上帝耶和华啊，"],["q1","你必救赎我。"],["v","6"],["","我憎恨拜假神的人，"],["q1","我只信靠耶和华。"],["v","7"],["","你已经看见我的困苦，"],["q1","知道我心中的愁烦，"],["q1","我因你的恩慈而欢喜快乐。"],["v","8"],["","你没有将我交在仇敌手中，"],["q1","你使我双脚站在宽阔之地。"],["v","9"],["","耶和华啊，我落在苦难之中，"],["q1","求你怜悯我，"],["q1","愁苦令我眼目昏聩，身心疲惫。"],["v","10"],["","我的生命被愁苦吞噬，"],["q1","岁月被哀伤耗尽，"],["q1","力量因罪恶而消逝，"],["q1","我成了枯骨一堆。"],["v","11"],["","仇敌羞辱我，"],["q1","邻居厌弃我，"],["q1","朋友害怕我，"],["q1","路人纷纷躲避我。"],["v","12"],["","我被人遗忘，就像已死之人，"],["q1","又像破碎的陶器。"],["v","13"],["","我听见许多人窃窃私语，"],["q1","恐怖四下弥漫。"],["q1","他们图谋不轨，"],["q1","谋害我的性命。"],["v","14"],["","然而，耶和华啊，"],["q1","我依然信靠你；"],["q1","我说：“你是我的上帝。”"],["v","15"],["","我的时日都掌握在你手中，"],["q1","求你救我脱离仇敌和追逼我的人。"],["v","16"],["","求你以容光照耀仆人，"],["q1","施慈爱拯救我。"],["v","17"],["","耶和华啊，我曾向你呼求，"],["q1","求你不要叫我蒙羞。"],["q1","求你使恶人蒙羞，"],["q1","在阴间寂然无声。"],["v","18"],["","愿撒谎之人哑声，"],["q1","他们骄傲自大，"],["q1","狂言攻击义人。"],["v","19"],["","你的恩惠何其大，"],["q1","是为敬畏你的人预备的，"],["q1","在世人面前赐给投靠你的人。"],["v","20"],["","你把他们藏在你那里，"],["q1","使他们得到庇护，"],["q1","免遭世人暗算。"],["q1","你使他们躲在避难所，"],["q1","免受恶言恶语的攻击。"],["v","21"],["","耶和华当受称颂！"],["q1","因为我被困城中时，"],["q1","祂以奇妙的爱待我。"],["v","22"],["","我曾惊恐地说："],["q1","“我从你面前被弃绝！”"],["q1","其实我求助的时候，"],["q1","你听了我的呼求。"],["v","23"],["","耶和华忠心的子民啊，"],["q1","你们要爱祂。"],["q1","祂保护忠心的人，"],["q1","严惩骄傲的人。"],["v","24"],["","凡等候耶和华的人啊，"],["q1","要刚强壮胆！"]]