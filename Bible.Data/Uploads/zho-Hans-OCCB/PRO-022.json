[["c","22"],["v","1"],["","美名胜过巨富，"],["q2","恩宠好过金银。"],["v","2"],["","富人和穷人同世而立，"],["q2","二者皆由耶和华所造。"],["v","3"],["","明哲遇祸躲避，"],["q2","愚人前去受害。"],["v","4"],["","心存谦卑、敬畏耶和华，"],["q2","必得财富、尊荣和生命。"],["v","5"],["","奸徒之道有荆棘和陷阱，"],["q2","想保全生命的必须远避。"],["v","6"],["","教导孩童走正路，"],["q2","他到老也不偏离。"],["v","7"],["","富人管辖穷人，"],["q2","欠债的是债主的仆人。"],["v","8"],["","播种不义的必收灾祸，"],["q2","他暴怒的杖必被折断。"],["v","9"],["","慷慨的人必蒙福，"],["q2","因他给穷人食物。"],["v","10"],["","赶走嘲讽者，纷争平息，"],["q2","争吵和羞辱也会消除。"],["v","11"],["","喜爱清心、口吐恩言的人，"],["q2","必与君王为友。"],["v","12"],["","耶和华的眼目护卫知识，"],["q2","祂必推翻奸徒的言论。"],["v","13"],["","懒惰人说：“外面有狮子，"],["q2","我会命丧街头。”"],["v","14"],["","淫妇的口是深坑，"],["q2","耶和华憎恶的人必陷进去。"],["v","15"],["","愚昧缠住孩童的心，"],["q2","教棍能远远赶走它。"],["v","16"],["","靠压榨穷人敛财和送礼给富人的，"],["q2","都必穷困潦倒。"],["s1","智者之言"],["v","17"],["","你要侧耳听智者之言，"],["q2","专心领受我的教诲，"],["v","18"],["","铭记在心、随时诵咏，"],["q2","方为美事。"],["v","19"],["","今天我将这些指示你，"],["q2","为要使你倚靠耶和华。"],["v","20"],["","关于谋略和知识，"],["q2","我已写给你三十条，"],["v","21"],["","要使你认识真理，"],["q2","好如实答复差你来的人。"],["v","22"],["","不可仗势剥削贫穷人，"],["q2","法庭上不可欺凌困苦者，"],["v","23"],["","因为耶和华必为他们申冤，"],["q2","夺去掠夺他们之人的性命。"],["v","24"],["","不可结交脾气暴躁者，"],["q2","不要跟易怒之人来往，"],["v","25"],["","免得你沾染他们的恶习，"],["q2","不能自拔。"],["v","26"],["","不要为人击掌作保，"],["q2","不要为欠债的抵押。"],["v","27"],["","如果你还不起，"],["q2","连你的床也会被抬走。"],["v","28"],["","不可移动祖先定下的界石。"],["v","29"],["","你看那精明能干的人，"],["q2","他必侍立在君王面前，"],["q2","不会效力于泛泛之辈。"]]