[["c","18"],["v","1"],["","孤傲者独求己愿，"],["q2","他恼恨一切真知。"],["v","2"],["","愚人不喜欢悟性，"],["q2","只喜欢发表意见。"],["v","3"],["","邪恶与藐视同行，"],["q2","无耻与羞辱为伴。"],["v","4"],["","人口中的话如同深水，"],["q2","智慧之泉像涓涓溪流。"],["v","5"],["","袒护恶人不好，"],["q2","冤枉义人不善。"],["v","6"],["","愚人说话引起纷争，"],["q2","他的口招来鞭打。"],["v","7"],["","愚人的口自招灭亡，"],["q2","他的嘴坑害他自己。"],["v","8"],["","闲言碎语如同美食，"],["q2","深入人的五脏六腑。"],["v","9"],["","懒惰人与毁坏者意气相投。"],["v","10"],["","耶和华的名是坚固保障，"],["q2","义人投奔其中就得安稳。"],["v","11"],["","钱财是富人的坚城，"],["q2","在他幻想中是高墙。"],["v","12"],["","骄傲是败亡的前奏，"],["q2","谦卑是尊荣的先锋。"],["v","13"],["","未听先答的人，"],["q2","自显愚昧和羞辱。"],["v","14"],["","人的心灵能忍受疾病，"],["q2","谁能忍受破碎的心灵？"],["v","15"],["","哲士的心得知识，"],["q2","智者的耳求知识。"],["v","16"],["","礼物为人开路，"],["q2","领人晋见权贵。"],["v","17"],["","先告状的看似有理，"],["q2","一经对质真相大白。"],["v","18"],["","抽签可以平息争端，"],["q2","调解强者间的纠纷。"],["v","19"],["","与结怨的兄弟和解比攻城还难，"],["q2","争端难破，如坚城的门闩。"],["v","20"],["","人因口中所说的话而饱足，"],["q2","因嘴中所出的言语而满足。"],["v","21"],["","口舌能够定生死，"],["q2","多嘴多言食恶果。"],["v","22"],["","得到妻子就是得到珍宝，"],["q2","也是蒙了耶和华的恩惠。"],["v","23"],["","穷人哀声恳求，"],["q2","富人恶言相向。"],["v","24"],["","滥交友，自招损；"],["q2","得知己，胜手足。"]]