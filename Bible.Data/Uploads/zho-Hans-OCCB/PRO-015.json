[["c","15"],["v","1"],["","温和的回答平息怒气，"],["q2","粗暴的言词激起愤怒。"],["v","2"],["","智者的舌头传扬知识，"],["q2","愚人的嘴巴吐露愚昧。"],["v","3"],["","耶和华的眼目无所不在，"],["q2","无论善人恶人，祂都鉴察。"],["v","4"],["","温和的言词是生命树，"],["q2","乖谬的话语伤透人心。"],["v","5"],["","愚人蔑视父亲的管教，"],["q2","接受责备的才算明智。"],["v","6"],["","义人家中财富充足，"],["q2","恶人得利惹来祸患。"],["v","7"],["","智者的嘴传扬知识，"],["q2","愚人的心并非如此。"],["v","8"],["","耶和华憎恨恶人的祭物，"],["q2","悦纳正直人的祈祷。"],["v","9"],["","耶和华憎恨恶人的行径，"],["q2","喜爱追求公义的人。"],["v","10"],["","背离正道，必遭严惩；"],["q2","厌恶责备，必致死亡。"],["v","11"],["","阴间和死地在耶和华面前尚且无法隐藏，"],["q2","何况世人的心思呢！"],["v","12"],["","嘲讽者不爱听责备，"],["q2","也不愿请教智者。"],["v","13"],["","心中喜乐，容光焕发；"],["q2","心里悲伤，精神颓丧。"],["v","14"],["","哲士的心追求知识，"],["q2","愚人的口吞吃愚昧。"],["v","15"],["","困苦人天天受煎熬，"],["q2","乐观者常常有喜乐。"],["v","16"],["","财物虽少但敬畏耶和华，"],["q2","胜过家财万贯却充满烦恼。"],["v","17"],["","粗茶淡饭但彼此相爱，"],["q2","胜过美酒佳肴却互相憎恨。"],["v","18"],["","脾气暴躁，惹起争端；"],["q2","忍耐克制，平息纠纷。"],["v","19"],["","懒惰人的路布满荆棘，"],["q2","正直人的道平坦宽阔。"],["v","20"],["","智慧之子使父亲欢喜，"],["q2","愚昧之人却藐视母亲。"],["v","21"],["","无知者以愚昧为乐，"],["q2","明哲之士遵循正道。"],["v","22"],["","缺乏商讨，计划失败；"],["q2","集思广益，事无不成。"],["v","23"],["","应对得体，心中愉快；"],["q2","言语合宜，何等美好！"],["v","24"],["","智者循生命之路上升，"],["q2","以免坠入阴间。"],["v","25"],["","耶和华拆毁傲慢人的房屋，"],["q2","祂使寡妇的地界完整无损。"],["v","26"],["","耶和华憎恨恶念，"],["q2","恩言乃是纯洁的。"],["v","27"],["","贪不义财，自害己家；"],["q2","厌恶贿赂，安然存活。"],["v","28"],["","义人三思而后答，"],["q2","恶人张口吐恶言。"],["v","29"],["","耶和华远离恶人，"],["q2","却听义人的祷告。"],["v","30"],["","眼神发光令人心喜，"],["q2","喜讯出来滋润骨头。"],["v","31"],["","倾听生命的训诫，"],["q2","使人与智者同列。"],["v","32"],["","不受管教就是轻看自己，"],["q2","听从责备才能得到智慧。"],["v","33"],["","敬畏耶和华乃是智训，"],["q2","学会谦卑才能得尊荣。"]]