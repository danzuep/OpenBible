[["c","17"],["cl","第17篇"],["s4","无辜者的祈祷"],["d","大卫的祈祷。"],["v","1"],["","耶和华啊，"],["q1","求你听我祈求公义的声音，"],["q1","侧耳听我的呼求，"],["q1","垂听我真诚的祷告。"],["v","2"],["","愿你宣判我无罪，"],["q1","愿你明察是非。"],["v","3"],["","你试验过我的心思，"],["q1","夜间鉴察过我，磨炼过我，"],["q1","找不出任何过犯；"],["q1","我立志口不犯罪。"],["v","4"],["","我遵守你的教导，洁身自守，"],["q1","不与残暴之徒同流。"],["v","5"],["","我坚定地走你的道路，"],["q1","脚步从未偏离。"],["v","6"],["","上帝啊！我向你求告，"],["q1","因为你必应允我。"],["q1","求你侧耳听我的祷告。"],["v","7"],["","求你彰显你奇妙的慈爱，"],["q1","用右手拯救投靠你的人脱离仇敌。"],["v","8"],["","求你保护我，像保护眼中的瞳仁，"],["q1","用你的翅膀荫庇我，"],["v","9"],["","救我脱离恶人的攻击，"],["q1","脱离四围杀气腾腾的仇敌。"],["v","10"],["","他们良心丧尽，口出狂言。"],["v","11"],["","他们穷追围堵，"],["q1","伺机把我打倒在地。"],["v","12"],["","他们像急于撕碎猎物的饿狮，"],["q1","又像蹲伏在暗处的猛狮。"],["v","13"],["","耶和华啊，"],["q1","求你起来迎头击倒他们，"],["q1","求你持刀救我脱离恶人。"],["v","14"],["","耶和华啊，"],["q1","求你伸手救我脱离这些人，"],["q1","脱离这些只在今生有福分的世人。"],["q1","你使他们财宝无数。"],["q1","他们儿女众多，"],["q1","还把财富留给子孙。"],["v","15"],["","但我必因公义而得见你的面；"],["q1","我醒来见到你的真容就心满意足了。"]]