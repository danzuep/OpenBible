[["c","25"],["cl","第25篇"],["s4","祈求引导和赦免"],["d","大卫的诗。"],["v","1"],["","耶和华啊，我的心仰望你。"],["v","2"],["","我的上帝啊，我信靠你，"],["q1","求你不要叫我蒙羞，"],["q1","不要让我的仇敌向我夸胜。"],["v","3"],["","等候你的必不羞愧，"],["q1","背信弃义者必蒙羞。"],["v","4"],["","耶和华啊，"],["q1","求你指引我走你的路，"],["q1","教导我行你的道。"],["v","5"],["","求你以你的真理引领我，"],["q1","教导我，因为你是拯救我的上帝，"],["q1","我终日等候你。"],["v","6"],["","耶和华啊，"],["q1","求你顾念你亘古以来常施的怜悯和慈爱，"],["v","7"],["","求你饶恕我年轻时的罪恶和过犯。"],["q1","耶和华啊，求你以你的恩惠和慈爱待我。"],["v","8"],["","耶和华良善公正，"],["q1","祂教导罪人走正路。"],["v","9"],["","祂指引谦卑人追求公义，"],["q1","教导他们行祂的道。"],["v","10"],["","遵守祂的约和法度的人，"],["q1","耶和华总以慈爱和信实相待。"],["v","11"],["","耶和华啊，我罪恶深重，"],["q1","求你为了自己的名而赦免我。"],["v","12"],["","凡敬畏耶和华的人，"],["q1","耶和华必指示他当走的路。"],["v","13"],["","他必享福，"],["q1","他的后代必承受土地。"],["v","14"],["","耶和华与敬畏祂的人为友，"],["q1","使他们认识祂的约。"],["v","15"],["","我常常仰望耶和华，"],["q1","因为唯有祂能使我的脚脱离网罗。"],["v","16"],["","耶和华啊，我孤苦零丁，"],["q1","求你眷顾我，恩待我。"],["v","17"],["","我心中充满愁烦，"],["q1","求你救我脱离患难。"],["v","18"],["","求你体恤我的忧伤和痛苦，"],["q1","赦免我一切的罪。"],["v","19"],["","你看我的仇敌何其多，"],["q1","他们都痛恨我。"],["v","20"],["","求你保护、搭救我的性命，"],["q1","别让我蒙羞，因为我投靠你。"],["v","21"],["","求你以纯全和正直护卫我，"],["q1","因为我等候你。"],["v","22"],["","上帝啊，"],["q1","求你救赎"],["pn","以色列"],["","脱离一切困境。"]]