[["c","29"],["cl","第29篇"],["s4","上帝威严的声音"],["d","大卫的诗。"],["v","1"],["","上帝的众子啊，"],["q1","要赞美耶和华，"],["q1","赞美耶和华的荣耀和能力，"],["v","2"],["","要赞美耶和华荣耀的名，"],["q1","穿上圣洁的衣服敬拜祂。"],["v","3"],["","耶和华的声音回荡在水上，"],["q1","荣耀的上帝打雷，"],["q1","耶和华在洪涛之上打雷。"],["v","4"],["","耶和华的声音充满能力；"],["q1","耶和华的声音充满威严。"],["v","5"],["","耶和华的声音震断香柏树，"],["q1","耶和华劈碎"],["pn","黎巴嫩"],["","的香柏树，"],["v","6"],["","使"],["pn","黎巴嫩"],["","山跳跃如小牛，"],["pn","西连"],["","山跳跃如野牛。"],["v","7"],["","耶和华的声音携闪电而来。"],["v","8"],["","耶和华的声音震动旷野，"],["q1","耶和华震动"],["pn","加低斯"],["","的旷野。"],["v","9"],["","耶和华的声音击倒橡树"],["","，"],["q1","使树木凋零。"],["q1","众人在祂殿中高呼："],["q1","“荣耀！”"],["v","10"],["","耶和华坐在洪涛之上，"],["q1","耶和华永远坐着为王。"],["v","11"],["","耶和华赐力量给自己的子民，"],["q1","耶和华赐给他们平安的福乐。"]]