[["c","12"],["v","1"],["","喜爱管教的喜爱知识，"],["q2","厌恶责备的愚不可及。"],["v","2"],["","善良的人蒙耶和华赐恩，"],["q2","诡诈的人被耶和华定罪。"],["v","3"],["","人不能靠恶行坚立自己，"],["q2","义人的根基却不会动摇。"],["v","4"],["","贤德的妻子是丈夫的冠冕，"],["q2","无耻的妻子如丈夫的骨瘤。"],["v","5"],["","义人的心思公平正直，"],["q2","恶人的计谋阴险诡诈。"],["v","6"],["","恶人的言语暗藏杀机，"],["q2","正直人的口拯救生命。"],["v","7"],["","恶人覆灭不复存在，"],["q2","义人的家屹立不倒。"],["v","8"],["","人有智慧受称赞，"],["q2","心术不正遭唾弃。"],["v","9"],["","地位卑微却有仆人，"],["q2","胜过自大却饿肚子。"],["v","10"],["","义人顾惜自己的牲畜，"],["q2","恶人的怜悯也是残忍。"],["v","11"],["","努力耕耘，丰衣足食；"],["q2","追求虚荣，愚不可及。"],["v","12"],["","恶人贪恋坏人的赃物，"],["q2","义人的根结出硕果。"],["v","13"],["","恶人被自己的恶言所困，"],["q2","但义人可以脱离险境。"],["v","14"],["","口出良言，饱尝美福；"],["q2","双手勤劳，终得回报。"],["v","15"],["","愚人自以为是，"],["q2","智者肯听劝诫。"],["v","16"],["","愚人难压怒气，"],["q2","明哲忍辱负重。"],["v","17"],["","忠实的证人讲真话，"],["q2","作伪证者满口谎言。"],["v","18"],["","出言不慎犹如利剑伤人，"],["q2","智者之言却能医治创伤。"],["v","19"],["","诚实的口永远长存，"],["q2","撒谎的舌转瞬即逝。"],["v","20"],["","图谋恶事的心怀诡诈，"],["q2","劝人和睦的喜乐洋溢。"],["v","21"],["","义人无灾无难，"],["q2","恶人灾祸连连。"],["v","22"],["","耶和华厌恶说谎的嘴，"],["q2","祂喜爱行为诚实的人。"],["v","23"],["","明哲不露锋芒，"],["q2","愚人心吐愚昧。"],["v","24"],["","殷勤的手必掌权，"],["q2","懒惰者必做奴仆。"],["v","25"],["","忧虑的心使人消沉，"],["q2","一句良言振奋人心。"],["v","26"],["","义人引人走正路，"],["q2","恶人领人入歧途。"],["v","27"],["","懒汉不烤猎物，"],["q2","勤快人得资财。"],["v","28"],["","公义的道上有生命，"],["q2","公义的路上无死亡。"]]