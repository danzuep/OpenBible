@typeparam TItem

@if (ItemList is not null)
{
    @foreach (var item in ItemList)
    {
        if (item is not null)
        {
            @if (ItemTemplate is not null)
            {
                @ItemTemplate(item)
            }
            else
            {
                item.ToString();
            }
        }
    }
}

@code {
    [Parameter]
    public IEnumerable<TItem>? ItemList { get; set; }

    [Parameter]
    public RenderFragment<TItem>? ItemTemplate { get; set; }
}
