@using Bible.Usx.Models

<span class="footnote-wrapper @Footnote.Style">
    <sup class="usj-footnote-caller">@Footnote.Caller</sup>
    <aside class="usj-footnote-content">
        @if (Footnote.Content != null)
        {
            @foreach (var node in Footnote.Content)
            {
                <UsjRenderer Node="node" ShowRuby="ShowRuby" />
            }
        }
    </aside>
</span>

@code {
    [Parameter, EditorRequired]
    public UsjFootnote Footnote { get; set; } = default!;

    [Parameter]
    public bool ShowRuby { get; set; } = true;
}